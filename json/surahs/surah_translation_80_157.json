{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":80,"VerseNumber":1,"Text":"روی درهم کشید و پشت کرد"},{"SurahNumber":80,"VerseNumber":2,"Text":"که آمدش کور"},{"SurahNumber":80,"VerseNumber":3,"Text":"و چه دانستت شاید او پاکی جوید"},{"SurahNumber":80,"VerseNumber":4,"Text":"یا یادآور شود پس سود دهدش یادآوردن‌"},{"SurahNumber":80,"VerseNumber":5,"Text":"اما آنکه بی‌نیازی جست‌"},{"SurahNumber":80,"VerseNumber":6,"Text":"پس تواش پذیرفتی‌"},{"SurahNumber":80,"VerseNumber":7,"Text":"و نیست بر تو که او پاکی نجوید"},{"SurahNumber":80,"VerseNumber":8,"Text":"و اما آنکه بیامدت می‌دوید"},{"SurahNumber":80,"VerseNumber":9,"Text":"و او می‌ترسید"},{"SurahNumber":80,"VerseNumber":10,"Text":"پس تو از او سرگرمی جستی‌"},{"SurahNumber":80,"VerseNumber":11,"Text":"نه چنین است همانا آن است یادآوریی‌"},{"SurahNumber":80,"VerseNumber":12,"Text":"که هر که خواهد یاد آوردش‌"},{"SurahNumber":80,"VerseNumber":13,"Text":"در نامه‌هایی گرامی‌"},{"SurahNumber":80,"VerseNumber":14,"Text":"برافراشته پاک‌شده‌"},{"SurahNumber":80,"VerseNumber":15,"Text":"به دستهای پیام‌آورانی‌"},{"SurahNumber":80,"VerseNumber":16,"Text":"گرامیانی نیکانی‌"},{"SurahNumber":80,"VerseNumber":17,"Text":"کشته باد انسان چه ناسپاس است‌"},{"SurahNumber":80,"VerseNumber":18,"Text":"از چه چیز آفریدش‌"},{"SurahNumber":80,"VerseNumber":19,"Text":"از نطفه بیافریدش پس مقدّر داشتش (اندازه نهادش)"},{"SurahNumber":80,"VerseNumber":20,"Text":"سپس راه را آماده ساختش‌"},{"SurahNumber":80,"VerseNumber":21,"Text":"پس میرانیدش و به گور بردش‌"},{"SurahNumber":80,"VerseNumber":22,"Text":"سپس هر گاه خواست برون آردش‌"},{"SurahNumber":80,"VerseNumber":23,"Text":"نه چنین است هنوز نگذارد آنچه فرمودش‌"},{"SurahNumber":80,"VerseNumber":24,"Text":"پس بنگرد انسان بسوی خوراکش‌"},{"SurahNumber":80,"VerseNumber":25,"Text":"که ریختیم ما آب را ریزشی‌"},{"SurahNumber":80,"VerseNumber":26,"Text":"پس شکافتیم زمین را شکافتنی‌"},{"SurahNumber":80,"VerseNumber":27,"Text":"پس رویانیدیم در آن دانه‌"},{"SurahNumber":80,"VerseNumber":28,"Text":"و انگوری و خرمائی‌"},{"SurahNumber":80,"VerseNumber":29,"Text":"و زیتونی و خرمابنی‌"},{"SurahNumber":80,"VerseNumber":30,"Text":"و باغچه‌هائی پیچیده‌"},{"SurahNumber":80,"VerseNumber":31,"Text":"و میوه‌ای و چمنی‌"},{"SurahNumber":80,"VerseNumber":32,"Text":"بهره‌ای برای شما و برای دامهای شما"},{"SurahNumber":80,"VerseNumber":33,"Text":"پس گاهی که آید خروش کرسازنده‌"},{"SurahNumber":80,"VerseNumber":34,"Text":"روزی که گریزد مرد از برادرش‌"},{"SurahNumber":80,"VerseNumber":35,"Text":"و مادرش و پدرش‌"},{"SurahNumber":80,"VerseNumber":36,"Text":"و همسرش و فرزندانش‌"},{"SurahNumber":80,"VerseNumber":37,"Text":"هر مردی از ایشان را است در آن روز کاری که به خود واداردش‌"},{"SurahNumber":80,"VerseNumber":38,"Text":"چهره‌هایی است در آن روز گشوده‌"},{"SurahNumber":80,"VerseNumber":39,"Text":"خندان شادان‌"},{"SurahNumber":80,"VerseNumber":40,"Text":"و چهره‌هایی در آن روز بر آنها است گردی‌"},{"SurahNumber":80,"VerseNumber":41,"Text":"دستخوش سازدش پریشانی‌"},{"SurahNumber":80,"VerseNumber":42,"Text":"آنانند کافران پرده‌دران‌"}]}