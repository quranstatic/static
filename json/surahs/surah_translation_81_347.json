{"Id":347,"LanguageCodes":["sr","srp"],"Name":"srp-rowwadtranslati","Author":"Rowwad Translation Center Islamhouse","Language":"Serbian","Description":"Serbian","Direction":"ltr","Source":"https://quranenc.com/en/browse/serbian_rwwad","Translations":[{"SurahNumber":81,"VerseNumber":1,"Text":"Када Сунце буде скупљено и изгуби сјај"},{"SurahNumber":81,"VerseNumber":2,"Text":"и када раштркане звезде попадају"},{"SurahNumber":81,"VerseNumber":3,"Text":"и када планине буду покренуте и смрвљене"},{"SurahNumber":81,"VerseNumber":4,"Text":"и када стеоне камиле буду остављене"},{"SurahNumber":81,"VerseNumber":5,"Text":"и када дивље животиње буду сабране"},{"SurahNumber":81,"VerseNumber":6,"Text":"и када мора буду распаљена"},{"SurahNumber":81,"VerseNumber":7,"Text":"и када душе буду спарене"},{"SurahNumber":81,"VerseNumber":8,"Text":"и када девојчица која је жива закопана буде упитана"},{"SurahNumber":81,"VerseNumber":9,"Text":"због којег је греха убијена"},{"SurahNumber":81,"VerseNumber":10,"Text":"и када листови буду раширени"},{"SurahNumber":81,"VerseNumber":11,"Text":"и када небо буде уклоњено"},{"SurahNumber":81,"VerseNumber":12,"Text":"и када Огањ буде разбуктан"},{"SurahNumber":81,"VerseNumber":13,"Text":"и када Рај буде приближен"},{"SurahNumber":81,"VerseNumber":14,"Text":"свако ће да сазна оно што је припремио"},{"SurahNumber":81,"VerseNumber":15,"Text":"И кунем се оним што се скрива"},{"SurahNumber":81,"VerseNumber":16,"Text":"што се креће и склања"},{"SurahNumber":81,"VerseNumber":17,"Text":"и ноћи кад долази"},{"SurahNumber":81,"VerseNumber":18,"Text":"и зором кад „дише“"},{"SurahNumber":81,"VerseNumber":19,"Text":"Он - Кур'ан је, заиста, казивање Племенитог Анђела"},{"SurahNumber":81,"VerseNumber":20,"Text":"Моћног, код Господара Престола, цењеног"},{"SurahNumber":81,"VerseNumber":21,"Text":"Коме се други покоравају, поверљивог"},{"SurahNumber":81,"VerseNumber":22,"Text":"А ваш друг Мухаммед није луд"},{"SurahNumber":81,"VerseNumber":23,"Text":"он га је на обзорју јасном видео"},{"SurahNumber":81,"VerseNumber":24,"Text":"и, када је у питању оно што је недокучиво чулима, он није шкрт"},{"SurahNumber":81,"VerseNumber":25,"Text":"и Кур'ан није говор проклетог ђавола"},{"SurahNumber":81,"VerseNumber":26,"Text":"па куда онда идете"},{"SurahNumber":81,"VerseNumber":27,"Text":"Он је само опомена световима"},{"SurahNumber":81,"VerseNumber":28,"Text":"ономе од вас који жели да је на правом путу"},{"SurahNumber":81,"VerseNumber":29,"Text":"а ви не можете ништа хтети ако то Аллах, Господар светова, неће"}]}