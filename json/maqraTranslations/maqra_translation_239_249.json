{"Id":249,"LanguageCodes":["ml","mal"],"Name":"mal-muhammadkarakun-lad","Author":"Muhammad Karakunnu And Vanidas Elayavoor","Language":"Malayalam","Description":"Malayalam - Transliteration with diacritics","Direction":"ltr","Source":"http://tanzil.net","Translations":[{"SurahNumber":94,"VerseNumber":1,"Text":"ninṟe hr̥dayaṁ ninakku nāṁ viśālamākkiyillē"},{"SurahNumber":94,"VerseNumber":2,"Text":"ninṟe bhāraṁ ninnil ninniṟakki veccillē"},{"SurahNumber":94,"VerseNumber":3,"Text":"ninṟe mutukine ñericcukeāṇṭirunna bhāraṁ"},{"SurahNumber":94,"VerseNumber":4,"Text":"ninṟe kīrtti nāṁ uyarttittarikayuṁ ceytu"},{"SurahNumber":94,"VerseNumber":5,"Text":"atināl tīrccayāyuṁ prayāsattēāṭeāppaṁ eḷuppavumuṇṭ"},{"SurahNumber":94,"VerseNumber":6,"Text":"niścayaṁ, prayāsattēāṭeāppamāṇ eḷuppaṁ"},{"SurahNumber":94,"VerseNumber":7,"Text":"atināl onnil ninneāḻivāyāl maṟṟeānnil muḻukuka"},{"SurahNumber":94,"VerseNumber":8,"Text":"ninṟe nāthanil pratīkṣa arppikkukayuṁ ceyyuka"},{"SurahNumber":95,"VerseNumber":1,"Text":"attiyuṁ olīvuṁ sākṣi"},{"SurahNumber":95,"VerseNumber":2,"Text":"sīnāmala sākṣi"},{"SurahNumber":95,"VerseNumber":3,"Text":"nirbhītamāya ī makkānagaraṁ sākṣi"},{"SurahNumber":95,"VerseNumber":4,"Text":"tīrccayāyuṁ manuṣyane nāṁ mikavuṟṟa ghaṭanayil sr̥ṣṭiccu"},{"SurahNumber":95,"VerseNumber":5,"Text":"pinne nāmavane patitaril patitanākki"},{"SurahNumber":95,"VerseNumber":6,"Text":"satyaviśvāsaṁ svīkariccavareyuṁ salkkarmaṅṅaḷ pravartticcavareyumeāḻike. avarkk, aṟutiyillātta pratiphalamuṇṭ"},{"SurahNumber":95,"VerseNumber":7,"Text":"enniṭṭuṁ rakṣāśikṣakaḷuṭe kāryattil ninne kaḷḷamākkunnatent"},{"SurahNumber":95,"VerseNumber":8,"Text":"vidhikarttākkaḷil ēṟṟavuṁ nalla vidhikarttāv allāhuvallayēā"},{"SurahNumber":96,"VerseNumber":1,"Text":"vāyikkuka, sr̥ṣṭicca ninṟe nāthanṟe nāmattil"},{"SurahNumber":96,"VerseNumber":2,"Text":"oṭṭippiṭikkunnatilninn avan manuṣyane sr̥ṣṭiccu"},{"SurahNumber":96,"VerseNumber":3,"Text":"vāyikkuka! ninṟe nāthan atyudāranāṇ"},{"SurahNumber":96,"VerseNumber":4,"Text":"pēnakeāṇṭu paṭhippiccavan"},{"SurahNumber":96,"VerseNumber":5,"Text":"manuṣyane avanaṟiyāttat avan paṭhippiccu"},{"SurahNumber":96,"VerseNumber":6,"Text":"sanśayamilla; manuṣyan atikramiyāyirikkunnu"},{"SurahNumber":96,"VerseNumber":7,"Text":"tanikkutānpēānnavanāyi kaṇṭatināl"},{"SurahNumber":96,"VerseNumber":8,"Text":"niścayaṁ, maṭakkaṁ ninṟe nāthaṅkalēkkāṇ"},{"SurahNumber":96,"VerseNumber":9,"Text":"taṭayunnavane nī kaṇṭēā"},{"SurahNumber":96,"VerseNumber":10,"Text":"nam'muṭe dāsane, avan namaskarikkumpēāḷ"},{"SurahNumber":96,"VerseNumber":11,"Text":"nī kaṇṭēā? ā aṭima nērvaḻiyil tanneyāṇ"},{"SurahNumber":96,"VerseNumber":12,"Text":"athavā, bhakti upadēśikkunnavanāṇ"},{"SurahNumber":96,"VerseNumber":13,"Text":"nī kaṇṭēā? ī taṭayunnavan satyatte taḷḷikkaḷayukayuṁ puṟantiriññu nilkkukayuṁ ceytavanāṇ"},{"SurahNumber":96,"VerseNumber":14,"Text":"allāhu ellāṁ kāṇunnuvenn avan aṟiyunnillē"},{"SurahNumber":96,"VerseNumber":15,"Text":"sanśayaṁ vēṇṭa; avanit avasānippikkunnilleṅkil; avanṟe kuṭuma nāṁ piṭiccu valikkuka tanne ceyyuṁ"},{"SurahNumber":96,"VerseNumber":16,"Text":"kaḷḷaṁ paṟayukayuṁ; pāpaṁ pravarttikkukayuṁ ceyyunna kuṭuma"},{"SurahNumber":96,"VerseNumber":17,"Text":"appēāḻavan tanṟe āḷukaḷe viḷikkaṭṭe"},{"SurahNumber":96,"VerseNumber":18,"Text":"nāṁ nam'muṭe śikṣākāryaṅṅaḷuṭe cumatalakkāreyuṁ viḷikkāṁ"},{"SurahNumber":96,"VerseNumber":19,"Text":"arut! nī avan vaḻaṅṅarut. nī sāṣṭāṅgaṁ praṇamikkuka! nam'muṭe sāmīpyaṁ nēṭuka"},{"SurahNumber":97,"VerseNumber":1,"Text":"tīrccayāyuṁ nāṁ ī khur'ānine vidhi nirṇāyaka rāvil avatarippiccu"},{"SurahNumber":97,"VerseNumber":2,"Text":"vidhi nirṇāyaka rāv entenn ninakkentaṟiyāṁ"},{"SurahNumber":97,"VerseNumber":3,"Text":"vidhi nirṇāyaka rāv āyiraṁ māsattekkāḷ mahattaramāṇ"},{"SurahNumber":97,"VerseNumber":4,"Text":"ā rāvil malakkukaḷuṁ jibrīluṁ iṟaṅṅi varunnu. samasta kāryaṅṅaḷeyuṁ sambandhicca taṅṅaḷuṭe nāthanṟe uttaravumāyi"},{"SurahNumber":97,"VerseNumber":5,"Text":"pulareāḷi viriyuṁ vare at praśāntamāyirikkuṁ"},{"SurahNumber":98,"VerseNumber":1,"Text":"vēdakkāruṁ bahudaiva viśvāsikaḷumāya satyaniṣēdhikaḷ vyaktamāya teḷiv vannettuṁ vare taṅṅaḷuṭe vaḻiyil uṟaccuninnu"},{"SurahNumber":98,"VerseNumber":2,"Text":"allāhuvil ninnuḷḷa dūtan pavitramāya granthattāḷukaḷ vāyiccu kēḷppikkunnat vare"},{"SurahNumber":98,"VerseNumber":3,"Text":"ā granthattāḷukaḷil satyaniṣṭhamāya pramāṇaṅṅaḷuṇṭ"},{"SurahNumber":98,"VerseNumber":4,"Text":"vēdaṁ nalkappeṭṭavar bhinnicciṭṭilla. avarkku vyaktamāya teḷiv vannettiya śēṣamallāte"},{"SurahNumber":98,"VerseNumber":5,"Text":"vidhēyatvaṁ allāhuvinu mātramākki avane mātraṁ vaḻippeṭṭ nērvaḻiyil jīvikkānallāte avarēāṭ kalpicciṭṭilla. oppaṁ namaskāraṁ niṣṭhayēāṭe nirvahikkānuṁ sakāt nalkānuṁ. atāṇ ceāvvāya jīvitakramaṁ"},{"SurahNumber":98,"VerseNumber":6,"Text":"tīrccayāyuṁ vēdakkāruṁ bahudaiva viśvāsikaḷumāya satyaniṣēdhikaḷ narakattīyilāṇ. avaratil sthiravāsikaḷāyirikkuṁ. avarāṇ sr̥ṣṭikaḷilēṟṟaṁ nikr̥ṣṭar"},{"SurahNumber":98,"VerseNumber":7,"Text":"ennāl satyaviśvāsaṁ svīkarikkukayuṁ salkkarmaṅṅaḷ pravarttikkukayuṁ ceytavarēā, avarāṇ sr̥ṣṭikaḷilēṟṟaṁ śrēṣṭhar"},{"SurahNumber":98,"VerseNumber":8,"Text":"avarkk avaruṭe nāthaṅkal arhamāya pratiphalamuṇṭ. tāḻbhāgattūṭe āṟukaḷeāḻukunna svargīyārāmaṅṅaḷ. avaratil ekkālavuṁ sthiravāsikaḷāyirikkuṁ. allāhu avarekkuṟicc tr̥ptanāyirikkuṁ. avar allāhuviluṁ santr̥ptarāyirikkuṁ. itellāṁ taṅṅaḷuṭe nāthane bhayappeṭunnavarkkuḷḷatāṇ"},{"SurahNumber":99,"VerseNumber":1,"Text":"bhūmi atiśaktiyāyi viṟakeāṇṭāl"},{"SurahNumber":99,"VerseNumber":2,"Text":"bhūmi atinṟe bhāraṅṅaḷ puṟantaḷḷiyāl"},{"SurahNumber":99,"VerseNumber":3,"Text":"manuṣyan cēādikkuṁ: atinentu paṟṟi"},{"SurahNumber":99,"VerseNumber":4,"Text":"annāḷil bhūmi atinṟe vivarameākke paṟaññaṟiyikkuṁ"},{"SurahNumber":99,"VerseNumber":5,"Text":"ninṟe nāthan atinu bēādhanaṁ nalkiyatinālāṇit"},{"SurahNumber":99,"VerseNumber":6,"Text":"annāḷil janaṁ pala saṅghaṅṅaḷāyi puṟappeṭuṁ; taṅṅaḷuṭe pravarttanaphalaṅṅaḷ nēril kāṇān"},{"SurahNumber":99,"VerseNumber":7,"Text":"atināl, aṇuttūkkaṁ nanma ceytavan at kāṇuṁ"},{"SurahNumber":99,"VerseNumber":8,"Text":"aṇuttūkkaṁ tinma ceytavan atuṁ kāṇuṁ"},{"SurahNumber":100,"VerseNumber":1,"Text":"kitaccēāṭunnava sākṣi"},{"SurahNumber":100,"VerseNumber":2,"Text":"aṅṅane kuḷampurasi tīppeāri paṟattunnava sākṣi"},{"SurahNumber":100,"VerseNumber":3,"Text":"pularcce ākramaṇaṁ naṭattunnava sākṣi"},{"SurahNumber":100,"VerseNumber":4,"Text":"aṅṅane peāṭipaṭalaṁ iḷakkiviṭunnava sākṣi"},{"SurahNumber":100,"VerseNumber":5,"Text":"śatrukkaḷkku naṭuvil kaṭannucellunnava sākṣi"},{"SurahNumber":100,"VerseNumber":6,"Text":"tīrccayāyuṁ manuṣyan tanṟe nāthanēāṭ nandiyillāttavanāṇ"},{"SurahNumber":100,"VerseNumber":7,"Text":"uṟappāyuṁ avan tanne ī nandikēṭinu sākṣiyāṇ"},{"SurahNumber":100,"VerseNumber":8,"Text":"dhanattēāṭuḷḷa avanṟe ārtti atikaṭhinaṁ tanne"}]}