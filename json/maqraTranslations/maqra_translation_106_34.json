{"Id":34,"LanguageCodes":["ar","ara"],"Name":"ara-quranuthmanihaf1","Author":"Quran Uthmani Hafs No Diacritics","Language":"Arabic","Description":"Arabic","Direction":"rtl","Source":"https://qurancomplex.gov.sa/","Translations":[{"SurahNumber":15,"VerseNumber":50,"Text":"وان عذابي هو العذاب الاليم"},{"SurahNumber":15,"VerseNumber":51,"Text":"ونبيهم عن ضيف ابرهيم"},{"SurahNumber":15,"VerseNumber":52,"Text":"اذ دخلوا عليه فقالوا سلم ا قال انا منكم وجلون"},{"SurahNumber":15,"VerseNumber":53,"Text":"قالوا لا توجل انا نبشرك بغلم عليم"},{"SurahNumber":15,"VerseNumber":54,"Text":"قال ابشرتموني على ان مسني الكبر فبم تبشرون"},{"SurahNumber":15,"VerseNumber":55,"Text":"قالوا بشرنك بالحق فلا تكن من القنطين"},{"SurahNumber":15,"VerseNumber":56,"Text":"قال ومن يقنط من رحمة ربه الا الضالون"},{"SurahNumber":15,"VerseNumber":57,"Text":"قال فما خطبكم ايها المرسلون"},{"SurahNumber":15,"VerseNumber":58,"Text":"قالوا انا ارسلنا الى قوم مجرمين"},{"SurahNumber":15,"VerseNumber":59,"Text":"الا ءال لوط انا لمنجوهم اجمعين"},{"SurahNumber":15,"VerseNumber":60,"Text":"الا امراته قدرنا انها لمن الغبرين"},{"SurahNumber":15,"VerseNumber":61,"Text":"فلما جاء ءال لوط المرسلون"},{"SurahNumber":15,"VerseNumber":62,"Text":"قال انكم قوم منكرون"},{"SurahNumber":15,"VerseNumber":63,"Text":"قالوا بل جينك بما كانوا فيه يمترون"},{"SurahNumber":15,"VerseNumber":64,"Text":"واتينك بالحق وانا لصدقون"},{"SurahNumber":15,"VerseNumber":65,"Text":"فاسر باهلك بقطع من اليل واتبع ادبرهم ولا يلتفت منكم احد وامضوا حيث تومرون"},{"SurahNumber":15,"VerseNumber":66,"Text":"وقضينا اليه ذلك الامر ان دابر هولاء مقطوع مصبحين"},{"SurahNumber":15,"VerseNumber":67,"Text":"وجاء اهل المدينة يستبشرون"},{"SurahNumber":15,"VerseNumber":68,"Text":"قال ان هولاء ضيفي فلا تفضحون"},{"SurahNumber":15,"VerseNumber":69,"Text":"واتقوا الله ولا تخزون"},{"SurahNumber":15,"VerseNumber":70,"Text":"قالوا اولم ننهك عن العلمين"},{"SurahNumber":15,"VerseNumber":71,"Text":"قال هولاء بناتي ان كنتم فعلين"},{"SurahNumber":15,"VerseNumber":72,"Text":"لعمرك انهم لفي سكرتهم يعمهون"},{"SurahNumber":15,"VerseNumber":73,"Text":"فاخذتهم الصيحة مشرقين"},{"SurahNumber":15,"VerseNumber":74,"Text":"فجعلنا عليها سافلها وامطرنا عليهم حجارة من سجيل"},{"SurahNumber":15,"VerseNumber":75,"Text":"ان في ذلك لايت للمتوسمين"},{"SurahNumber":15,"VerseNumber":76,"Text":"وانها لبسبيل مقيم"},{"SurahNumber":15,"VerseNumber":77,"Text":"ان في ذلك لاية للمومنين"},{"SurahNumber":15,"VerseNumber":78,"Text":"وان كان اصحب الايكة لظلمين"},{"SurahNumber":15,"VerseNumber":79,"Text":"فانتقمنا منهم وانهما لبامام مبين"},{"SurahNumber":15,"VerseNumber":80,"Text":"ولقد كذب اصحب الحجر المرسلين"},{"SurahNumber":15,"VerseNumber":81,"Text":"وءاتينهم ءايتنا فكانوا عنها معرضين"},{"SurahNumber":15,"VerseNumber":82,"Text":"وكانوا ينحتون من الجبال بيوتا ءامنين"},{"SurahNumber":15,"VerseNumber":83,"Text":"فاخذتهم الصيحة مصبحين"},{"SurahNumber":15,"VerseNumber":84,"Text":"فما اغنى عنهم ما كانوا يكسبون"},{"SurahNumber":15,"VerseNumber":85,"Text":"وما خلقنا السموت والارض وما بينهما الا بالحق وان الساعة لاتية فاصفح الصفح الجميل"},{"SurahNumber":15,"VerseNumber":86,"Text":"ان ربك هو الخلق العليم"},{"SurahNumber":15,"VerseNumber":87,"Text":"ولقد ءاتينك سبع ا من المثاني والقرءان العظيم"},{"SurahNumber":15,"VerseNumber":88,"Text":"لا تمدن عينيك الى ما متعنا به ازوج ا منهم ولا تحزن عليهم واخفض جناحك للمومنين"},{"SurahNumber":15,"VerseNumber":89,"Text":"وقل اني انا النذير المبين"},{"SurahNumber":15,"VerseNumber":90,"Text":"كما انزلنا على المقتسمين"},{"SurahNumber":15,"VerseNumber":91,"Text":"الذين جعلوا القرءان عضين"},{"SurahNumber":15,"VerseNumber":92,"Text":"فوربك لنسلنهم اجمعين"},{"SurahNumber":15,"VerseNumber":93,"Text":"عما كانوا يعملون"},{"SurahNumber":15,"VerseNumber":94,"Text":"فاصدع بما تومر واعرض عن المشركين"},{"SurahNumber":15,"VerseNumber":95,"Text":"انا كفينك المستهزءين"},{"SurahNumber":15,"VerseNumber":96,"Text":"الذين يجعلون مع الله الها ءاخر فسوف يعلمون"},{"SurahNumber":15,"VerseNumber":97,"Text":"ولقد نعلم انك يضيق صدرك بما يقولون"},{"SurahNumber":15,"VerseNumber":98,"Text":"فسبح بحمد ربك وكن من السجدين"},{"SurahNumber":15,"VerseNumber":99,"Text":"واعبد ربك حتى ياتيك اليقين"}]}