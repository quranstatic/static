{"Id":196,"LanguageCodes":["hr","hrv"],"Name":"hrv-unknown","Author":"Unknown","Language":"Croatian","Description":"Croatian","Direction":"ltr","Source":"http://donatequran.com/","Translations":[{"SurahNumber":80,"VerseNumber":1,"Text":"Namrštio se i okrenuo"},{"SurahNumber":80,"VerseNumber":2,"Text":"Jer mu je slijepac došao"},{"SurahNumber":80,"VerseNumber":3,"Text":"A šta znaš ti - možda se on čisti"},{"SurahNumber":80,"VerseNumber":4,"Text":"Ili podsjeća, pa mu koristi Opomena"},{"SurahNumber":80,"VerseNumber":5,"Text":"A što se tiče onog koji se smatra neovisnim"},{"SurahNumber":80,"VerseNumber":6,"Text":"Ta ti se njime baviš"},{"SurahNumber":80,"VerseNumber":7,"Text":"A nije do tebe ako se ne očisti"},{"SurahNumber":80,"VerseNumber":8,"Text":"A onaj ko ti dođe žureći"},{"SurahNumber":80,"VerseNumber":9,"Text":"I on strahuje"},{"SurahNumber":80,"VerseNumber":10,"Text":"Pa ti se na njega ne osvrćeš"},{"SurahNumber":80,"VerseNumber":11,"Text":"Nikako! Uistinu, on je Opomena"},{"SurahNumber":80,"VerseNumber":12,"Text":"Pa ko hoće imaće ga na umu"},{"SurahNumber":80,"VerseNumber":13,"Text":"Na listovima časnim"},{"SurahNumber":80,"VerseNumber":14,"Text":"Uzvišenim, pročišćenim"},{"SurahNumber":80,"VerseNumber":15,"Text":"U rukama pisara"},{"SurahNumber":80,"VerseNumber":16,"Text":"Plemenitih, čestitih"},{"SurahNumber":80,"VerseNumber":17,"Text":"Proklet bio čovjek! Kako je on nezahvalan"},{"SurahNumber":80,"VerseNumber":18,"Text":"Od koje stvari ga stvori"},{"SurahNumber":80,"VerseNumber":19,"Text":"Od kapi sjemena ga stvara, pa mu razmjer da"},{"SurahNumber":80,"VerseNumber":20,"Text":"Zatim mu put olakša"},{"SurahNumber":80,"VerseNumber":21,"Text":"Potom ga usmrti, pa ga sahrani"},{"SurahNumber":80,"VerseNumber":22,"Text":"Zatim, kad htjedne, proživiće ga"},{"SurahNumber":80,"VerseNumber":23,"Text":"Nikako! Još nije izvršio šta mu je naredio"},{"SurahNumber":80,"VerseNumber":24,"Text":"Pa nek pogleda čovjek hranu svoju"},{"SurahNumber":80,"VerseNumber":25,"Text":"Da mi lijemo vodu izlivom"},{"SurahNumber":80,"VerseNumber":26,"Text":"Zatim iscjepkamo zemlju pucanjem"},{"SurahNumber":80,"VerseNumber":27,"Text":"Pa damo da iznikne iz nje zrno"},{"SurahNumber":80,"VerseNumber":28,"Text":"I grožđe i jestivo bilje"},{"SurahNumber":80,"VerseNumber":29,"Text":"I masline i palme"},{"SurahNumber":80,"VerseNumber":30,"Text":"I bašče bujne"},{"SurahNumber":80,"VerseNumber":31,"Text":"I voće i ispašu"},{"SurahNumber":80,"VerseNumber":32,"Text":"Uživanje za vas i stoku vašu"},{"SurahNumber":80,"VerseNumber":33,"Text":"Pa kad dođe glas zaglušujući"},{"SurahNumber":80,"VerseNumber":34,"Text":"Na Dan kad bude bježao čovjek od brata svog"},{"SurahNumber":80,"VerseNumber":35,"Text":"I majke svoje i oca svog"},{"SurahNumber":80,"VerseNumber":36,"Text":"I žene svoje i sinova svojih"},{"SurahNumber":80,"VerseNumber":37,"Text":"Svaki čovjek između njih će Tog dana imati stvar koja će ga zaokupiti"},{"SurahNumber":80,"VerseNumber":38,"Text":"Lica će Tog dana biti svijetla"},{"SurahNumber":80,"VerseNumber":39,"Text":"Nasmijana, radosna"},{"SurahNumber":80,"VerseNumber":40,"Text":"I biće lica Tog dana - na njima prašina"},{"SurahNumber":80,"VerseNumber":41,"Text":"Pokriće ih tama"},{"SurahNumber":80,"VerseNumber":42,"Text":"To će oni - nevjernici, razvratnici biti"},{"SurahNumber":81,"VerseNumber":1,"Text":"Kada se Sunce smota"},{"SurahNumber":81,"VerseNumber":2,"Text":"I kad zvijezde kolapsiraju"},{"SurahNumber":81,"VerseNumber":3,"Text":"I kad se brda pokrenu"},{"SurahNumber":81,"VerseNumber":4,"Text":"I kad se steone kamile napuste"},{"SurahNumber":81,"VerseNumber":5,"Text":"I kad se zvijeri sakupe"},{"SurahNumber":81,"VerseNumber":6,"Text":"I kad se mora potpale"},{"SurahNumber":81,"VerseNumber":7,"Text":"I kad se duše spare"},{"SurahNumber":81,"VerseNumber":8,"Text":"I kad živo zakopana bude upitana"},{"SurahNumber":81,"VerseNumber":9,"Text":"Zbog kojeg grijeha je ubijena"},{"SurahNumber":81,"VerseNumber":10,"Text":"I kad se listovi rašire"},{"SurahNumber":81,"VerseNumber":11,"Text":"I kad se nebo otkrije"},{"SurahNumber":81,"VerseNumber":12,"Text":"I kad se džehim raspali"},{"SurahNumber":81,"VerseNumber":13,"Text":"I kad se Džennet približi"},{"SurahNumber":81,"VerseNumber":14,"Text":"Znaće duša šta je pripremila"},{"SurahNumber":81,"VerseNumber":15,"Text":"Pa ne! Kunem se onima koje uzmiču (odstupaju)"},{"SurahNumber":81,"VerseNumber":16,"Text":"Koje se kreću, koje se prikrivaju (nestaju)"},{"SurahNumber":81,"VerseNumber":17,"Text":"I noću, kad odlazi"},{"SurahNumber":81,"VerseNumber":18,"Text":"I jutrom, kad diše"},{"SurahNumber":81,"VerseNumber":19,"Text":"Uistinu, to je riječ izaslanika plemenitog"},{"SurahNumber":81,"VerseNumber":20,"Text":"Posjednika moći, kod Vlasnika Arša cijenjenog"},{"SurahNumber":81,"VerseNumber":21,"Text":"Slušanog, tamo pouzdanog"},{"SurahNumber":81,"VerseNumber":22,"Text":"I nije drug vaš lud"},{"SurahNumber":81,"VerseNumber":23,"Text":"A uistinu, vidio ga je na horizontu jasnom"},{"SurahNumber":81,"VerseNumber":24,"Text":"I nije on nad nevidljivim škrt"},{"SurahNumber":81,"VerseNumber":25,"Text":"Niti je on govor šejtana prokletog"},{"SurahNumber":81,"VerseNumber":26,"Text":"Pa kamo idete"},{"SurahNumber":81,"VerseNumber":27,"Text":"Zaista je on samo Opomena svjetovima"},{"SurahNumber":81,"VerseNumber":28,"Text":"Za onog od vas ko hoće da ide pravo"},{"SurahNumber":81,"VerseNumber":29,"Text":"A nećete, izuzev šta hoće Allah, Gospodar svjetova"}]}