{"Id":449,"LanguageCodes":["uk","ukr"],"Name":"ukr-yakubovych","Author":"Yakubovych","Language":"Ukrainian","Description":"Ukrainian","Direction":"ltr","Source":"","Translations":[{"SurahNumber":80,"VerseNumber":1,"Text":"Насупився та відвернувся він"},{"SurahNumber":80,"VerseNumber":2,"Text":"бо підійшов до нього сліпий"},{"SurahNumber":80,"VerseNumber":3,"Text":"А звідки тобі знати, можливо, очистився б він"},{"SurahNumber":80,"VerseNumber":4,"Text":"Чи запам’ятав би наставництво, і воно було б корисне йому"},{"SurahNumber":80,"VerseNumber":5,"Text":"А тому, хто багатий"},{"SurahNumber":80,"VerseNumber":6,"Text":"ти йому приділяєш увагу"},{"SurahNumber":80,"VerseNumber":7,"Text":"Хоча не тобі відповідати за те, що не очиститься він"},{"SurahNumber":80,"VerseNumber":8,"Text":"А хто приходить до тебе, поспішаючи"},{"SurahNumber":80,"VerseNumber":9,"Text":"та ще й з острахом"},{"SurahNumber":80,"VerseNumber":10,"Text":"то ти нехтуєш ним"},{"SurahNumber":80,"VerseNumber":11,"Text":"Та ж ні! Воістину, це — нагадування"},{"SurahNumber":80,"VerseNumber":12,"Text":"І хто бажає, той згадає його"},{"SurahNumber":80,"VerseNumber":13,"Text":"У сувоях шанованих"},{"SurahNumber":80,"VerseNumber":14,"Text":"піднесених і пречистих"},{"SurahNumber":80,"VerseNumber":15,"Text":"у руках писарів"},{"SurahNumber":80,"VerseNumber":16,"Text":"шляхетних і праведних"},{"SurahNumber":80,"VerseNumber":17,"Text":"Хай згине людина! Яка ж невдячна вона"},{"SurahNumber":80,"VerseNumber":18,"Text":"З чого створив Він її"},{"SurahNumber":80,"VerseNumber":19,"Text":"З краплі сім’я створив Він її та розмірив"},{"SurahNumber":80,"VerseNumber":20,"Text":"Потім полегшив Він шлях її"},{"SurahNumber":80,"VerseNumber":21,"Text":"згодом зробив її мертвою і поховав її"},{"SurahNumber":80,"VerseNumber":22,"Text":"потім, коли побажає, воскресить її"},{"SurahNumber":80,"VerseNumber":23,"Text":"Та ж ні! Не виконує вона того, що наказав Він їй"},{"SurahNumber":80,"VerseNumber":24,"Text":"Хай погляне людина на їжу свою"},{"SurahNumber":80,"VerseNumber":25,"Text":"Проливаємо Ми дощі зливами"},{"SurahNumber":80,"VerseNumber":26,"Text":"потім розколюємо Ми землю тріщинам"},{"SurahNumber":80,"VerseNumber":27,"Text":"і пророщуємо на ній зерно"},{"SurahNumber":80,"VerseNumber":28,"Text":"виноград і трави"},{"SurahNumber":80,"VerseNumber":29,"Text":"і оливи, і пальми"},{"SurahNumber":80,"VerseNumber":30,"Text":"і сади густі"},{"SurahNumber":80,"VerseNumber":31,"Text":"і плоди, і пасовиська"},{"SurahNumber":80,"VerseNumber":32,"Text":"на користь вам і худобі вашій"},{"SurahNumber":80,"VerseNumber":33,"Text":"І коли пролунає глас"},{"SurahNumber":80,"VerseNumber":34,"Text":"у День той чоловік покине свого брата"},{"SurahNumber":80,"VerseNumber":35,"Text":"і матір, і батька"},{"SurahNumber":80,"VerseNumber":36,"Text":"і дружину свою, і дітей своїх"},{"SurahNumber":80,"VerseNumber":37,"Text":"у кожної людини в той День своя справа, яка цілком захопить її"},{"SurahNumber":80,"VerseNumber":38,"Text":"Обличчя одних у той День будуть сяяти"},{"SurahNumber":80,"VerseNumber":39,"Text":"сміючись та радіючи"},{"SurahNumber":80,"VerseNumber":40,"Text":"а на обличчі інших у День той буде пил"},{"SurahNumber":80,"VerseNumber":41,"Text":"який вкриє їх чорнотою"},{"SurahNumber":80,"VerseNumber":42,"Text":"Оце вони — невіруючі нечестивці"},{"SurahNumber":81,"VerseNumber":1,"Text":"Коли сонце згорнеться"},{"SurahNumber":81,"VerseNumber":2,"Text":"коли зірки посиплються"},{"SurahNumber":81,"VerseNumber":3,"Text":"і коли гори зрушаться"},{"SurahNumber":81,"VerseNumber":4,"Text":"і коли верблюдиці на десятому місяці вагітності залишаться без нагляду"},{"SurahNumber":81,"VerseNumber":5,"Text":"і коли дикі звірі зберуться"},{"SurahNumber":81,"VerseNumber":6,"Text":"і коли моря запалають"},{"SurahNumber":81,"VerseNumber":7,"Text":"і коли душі з’єднаються"},{"SurahNumber":81,"VerseNumber":8,"Text":"коли поховану живцем запитають"},{"SurahNumber":81,"VerseNumber":9,"Text":"за який гріх її вбили"},{"SurahNumber":81,"VerseNumber":10,"Text":"і коли сувої розгорнуться"},{"SurahNumber":81,"VerseNumber":11,"Text":"і коли небо буде зірване"},{"SurahNumber":81,"VerseNumber":12,"Text":"і коли пекло запалає"},{"SurahNumber":81,"VerseNumber":13,"Text":"і коли рай наблизиться"},{"SurahNumber":81,"VerseNumber":14,"Text":"дізнається душа, що приготувала собі вона"},{"SurahNumber":81,"VerseNumber":15,"Text":"Та ж ні! Клянуся світилами відступаючими"},{"SurahNumber":81,"VerseNumber":16,"Text":"що швидко плинуть і зникають"},{"SurahNumber":81,"VerseNumber":17,"Text":"І ніччю, що розсіюється"},{"SurahNumber":81,"VerseNumber":18,"Text":"і світанком, коли займається він"},{"SurahNumber":81,"VerseNumber":19,"Text":"Воістину, це — слова посланця шляхетного"},{"SurahNumber":81,"VerseNumber":20,"Text":"Володаря сили біля Володаря трону, могутнього"},{"SurahNumber":81,"VerseNumber":21,"Text":"якому коряться, вірному"},{"SurahNumber":81,"VerseNumber":22,"Text":"І що ваш товариш не божевільний"},{"SurahNumber":81,"VerseNumber":23,"Text":"істинно, бачив він його на небосхилі ясному"},{"SurahNumber":81,"VerseNumber":24,"Text":"І що він не скупиться на розповіді про потаємне"},{"SurahNumber":81,"VerseNumber":25,"Text":"і що це — не слова проклятого шайтана"},{"SurahNumber":81,"VerseNumber":26,"Text":"Та куди ж ви йдете"},{"SurahNumber":81,"VerseNumber":27,"Text":"Воістину, це лише нагадування світам"},{"SurahNumber":81,"VerseNumber":28,"Text":"тим з-посеред вас, хто бажає йти прямим шляхом"},{"SurahNumber":81,"VerseNumber":29,"Text":"Але не побажаєте ви цього, якщо не побажає Аллаг, Господь світів"}]}