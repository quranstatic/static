{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":56,"VerseNumber":1,"Text":"گاهی که فرود آید فرودآینده‌"},{"SurahNumber":56,"VerseNumber":2,"Text":"نیست فرود آمدنش را دروغی‌"},{"SurahNumber":56,"VerseNumber":3,"Text":"فرودآرنده و بالابرنده‌"},{"SurahNumber":56,"VerseNumber":4,"Text":"گاهی که بلرزد زمین لرزیدنی‌"},{"SurahNumber":56,"VerseNumber":5,"Text":"و رانده شوند کوه‌ها راندنی‌"},{"SurahNumber":56,"VerseNumber":6,"Text":"پس گردند گردی پراکنده‌"},{"SurahNumber":56,"VerseNumber":7,"Text":"و شوید گروه‌هایی سه‌گانه‌"},{"SurahNumber":56,"VerseNumber":8,"Text":"پس یاران راست چیست یاران راست‌"},{"SurahNumber":56,"VerseNumber":9,"Text":"و یاران چپ چیست یاران چپ‌"},{"SurahNumber":56,"VerseNumber":10,"Text":"و پیش‌آهنگان (پیشی‌گیرندگان) آن پیش‌آهنگان‌"},{"SurahNumber":56,"VerseNumber":11,"Text":"آنانند نزدیک‌گشتگان‌"},{"SurahNumber":56,"VerseNumber":12,"Text":"در بهشتهای نعمتها"},{"SurahNumber":56,"VerseNumber":13,"Text":"پاره‌ای از پیشینیان‌"},{"SurahNumber":56,"VerseNumber":14,"Text":"و اندکی از آیندگان‌"},{"SurahNumber":56,"VerseNumber":15,"Text":"بر تختهائی بافته‌"},{"SurahNumber":56,"VerseNumber":16,"Text":"تکیه‌کنندگان بر آنها روی به روی‌"},{"SurahNumber":56,"VerseNumber":17,"Text":"بگردند بر ایشان پسرانی جاودانان‌"},{"SurahNumber":56,"VerseNumber":18,"Text":"با جامها و صراحیها و جامی از باده‌نمایان‌"},{"SurahNumber":56,"VerseNumber":19,"Text":"نه درد سر گیرند از آن و نه از خرد افتند"},{"SurahNumber":56,"VerseNumber":20,"Text":"و میوه‌ای از آنچه برگزینند"},{"SurahNumber":56,"VerseNumber":21,"Text":"و گوشت مرغی از آنچه هوس کنند"},{"SurahNumber":56,"VerseNumber":22,"Text":"و زنان سفیداندام فراخ‌چشمان‌"},{"SurahNumber":56,"VerseNumber":23,"Text":"مانندگان مروارید پوشیده‌"},{"SurahNumber":56,"VerseNumber":24,"Text":"پاداشی بدانچه بودند می‌کردند"},{"SurahNumber":56,"VerseNumber":25,"Text":"نشوند در آن بیهوده و نه گناه بستن را"},{"SurahNumber":56,"VerseNumber":26,"Text":"جز گفتار سلامی سلامی‌"},{"SurahNumber":56,"VerseNumber":27,"Text":"و یاران راست چه یاران راستی‌"},{"SurahNumber":56,"VerseNumber":28,"Text":"زیر درخت سدری بی‌خار"},{"SurahNumber":56,"VerseNumber":29,"Text":"و موزی به هم پیچیده‌"},{"SurahNumber":56,"VerseNumber":30,"Text":"و سایه‌ای کشیده‌"},{"SurahNumber":56,"VerseNumber":31,"Text":"و آبی ریزان‌"},{"SurahNumber":56,"VerseNumber":32,"Text":"و میوه‌ای فراوان‌"},{"SurahNumber":56,"VerseNumber":33,"Text":"نابریده و نه بازداشته‌"},{"SurahNumber":56,"VerseNumber":34,"Text":"و زنانی افراشته (بلندبالا)"},{"SurahNumber":56,"VerseNumber":35,"Text":"همانا پدید آوردیمشان پدید آوردنی‌"},{"SurahNumber":56,"VerseNumber":36,"Text":"پس گردانیدیمشان شوی‌نادیدگانی‌"},{"SurahNumber":56,"VerseNumber":37,"Text":"شوهر دوستانی همسالان‌"},{"SurahNumber":56,"VerseNumber":38,"Text":"برای یاران راست‌"},{"SurahNumber":56,"VerseNumber":39,"Text":"گروهی از پیشینیان‌"},{"SurahNumber":56,"VerseNumber":40,"Text":"و گروهی از بازماندگان‌"},{"SurahNumber":56,"VerseNumber":41,"Text":"و یاران چپ چه یاران چپ‌"},{"SurahNumber":56,"VerseNumber":42,"Text":"در آتش سوراخ‌کننده و آبی جوشان‌"},{"SurahNumber":56,"VerseNumber":43,"Text":"و سایه‌ای از دود سیاه‌"},{"SurahNumber":56,"VerseNumber":44,"Text":"نه خنک و نه گرامی‌"},{"SurahNumber":56,"VerseNumber":45,"Text":"همانا ایشان بودند پیش از این هوسرانان‌"},{"SurahNumber":56,"VerseNumber":46,"Text":"و بودند اصرار می‌ورزیدند بر گناه (یا پیمان‌شکنی) بزرگ‌"},{"SurahNumber":56,"VerseNumber":47,"Text":"و بودند می‌گفتند آیا گاهی که مُردیم و شدیم خاکی و استخوانهائی آیا مائیم برانگیختگان‌"},{"SurahNumber":56,"VerseNumber":48,"Text":"آیا و پدران ما پیشینیان‌"},{"SurahNumber":56,"VerseNumber":49,"Text":"بگو همانا پیشینیان و پسینیان‌"},{"SurahNumber":56,"VerseNumber":50,"Text":"گردآورده شوند بسوی وعده‌گاه روزی دانسته‌"},{"SurahNumber":56,"VerseNumber":51,"Text":"سپس شما ای گمراهان تکذیب‌کنندگان‌"},{"SurahNumber":56,"VerseNumber":52,"Text":"همانا خورنده‌اید از درختی از زقّوم‌"},{"SurahNumber":56,"VerseNumber":53,"Text":"پس آکنده‌اید از آن شکمها را"},{"SurahNumber":56,"VerseNumber":54,"Text":"پس آشامنده‌اید بر آن از آب جوشان‌"},{"SurahNumber":56,"VerseNumber":55,"Text":"پس نوشنده‌اید نوشیدن اشتران تشنگی‌زده‌"},{"SurahNumber":56,"VerseNumber":56,"Text":"این است پیشکش ایشان روز دین‌"},{"SurahNumber":56,"VerseNumber":57,"Text":"ما آفریدیمتان پس چرا تصدیق نمی‌کنید"},{"SurahNumber":56,"VerseNumber":58,"Text":"آیا دیدید آنچه را می‌ریزید (آب منی)"},{"SurahNumber":56,"VerseNumber":59,"Text":"آیا شما می‌آفریدش یا مائیم آفرینندگان‌"},{"SurahNumber":56,"VerseNumber":60,"Text":"ما نهادیم میان شما مرگ را و نیستیم پیشی گرفته‌شدگان‌"},{"SurahNumber":56,"VerseNumber":61,"Text":"و آنکه تبدیل کنیم مانندگان شما را و پدید آوریمتان در آنچه نمی‌دانید"},{"SurahNumber":56,"VerseNumber":62,"Text":"و همانا دانستید پیدایش نخستین را پس چرا یادآور نشوید"},{"SurahNumber":56,"VerseNumber":63,"Text":"آیا دیدید آنچه را می‌کارید"},{"SurahNumber":56,"VerseNumber":64,"Text":"آیا شما کشتش کنید یا مائیم کشت آوران‌"},{"SurahNumber":56,"VerseNumber":65,"Text":"اگر خواهیم گردانیمش خشک پس بمانید زمزمه‌کنان‌"},{"SurahNumber":56,"VerseNumber":66,"Text":"که مائیم زیانکاران‌"},{"SurahNumber":56,"VerseNumber":67,"Text":"بلکه مائیم ناکامان‌"},{"SurahNumber":56,"VerseNumber":68,"Text":"آیا دیدید آبی را که نوشید"},{"SurahNumber":56,"VerseNumber":69,"Text":"آیا شما فرودش آوردید از ابر یا مائیم فرودآورندگان‌"},{"SurahNumber":56,"VerseNumber":70,"Text":"اگر می‌خواستیم می‌گردانیدیمش تلخکام پس چرا سپاس نگزارید"},{"SurahNumber":56,"VerseNumber":71,"Text":"آیا دیدید آتشی را که افروزید"},{"SurahNumber":56,"VerseNumber":72,"Text":"آیا شما پدید آوردید درختش را یا مائیم پدیدآرندگان‌"},{"SurahNumber":56,"VerseNumber":73,"Text":"ما گردانیدیمش یادآوری و بهره‌ای برای نیازمندان‌"},{"SurahNumber":56,"VerseNumber":74,"Text":"پس تسبیح گوی به نام پروردگار بزرگ خویش‌"}]}