{"Id":151,"LanguageCodes":["fa","fas"],"Name":"fas-abolfazlbahramp","Author":"Abolfazl Bahrampour","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":112,"VerseNumber":1,"Text":"بگو حق اين است كه خدا يگانه است"},{"SurahNumber":112,"VerseNumber":2,"Text":"خدايى كه همه، نياز بدو برند"},{"SurahNumber":112,"VerseNumber":3,"Text":"نزاده و زاده نشده است"},{"SurahNumber":112,"VerseNumber":4,"Text":"و او را هيچ همتايى نباشد"},{"SurahNumber":113,"VerseNumber":1,"Text":"بگو به پروردگار سپيده دم پناه مى‌برم"},{"SurahNumber":113,"VerseNumber":2,"Text":"از شرّ آنچه آفريد"},{"SurahNumber":113,"VerseNumber":3,"Text":"و از شرّ شب تار، وقتى كه هجوم آورد"},{"SurahNumber":113,"VerseNumber":4,"Text":"و از شرّ دمندگان در گروه‌ها"},{"SurahNumber":113,"VerseNumber":5,"Text":"و از شرّ حسود آن‌گاه كه حسد ورزد"},{"SurahNumber":114,"VerseNumber":1,"Text":"بگو پناه مى‌برم به پروردگار مردم"},{"SurahNumber":114,"VerseNumber":2,"Text":"به فرمانرواى مردم"},{"SurahNumber":114,"VerseNumber":3,"Text":"به معبود مردم"},{"SurahNumber":114,"VerseNumber":4,"Text":"از شرّ وسوسه‌گر پنهان شونده [و بازگردنده‌]"},{"SurahNumber":114,"VerseNumber":5,"Text":"آن كه در سينه‌هاى مردم وسوسه مى‌كند"},{"SurahNumber":114,"VerseNumber":6,"Text":"از پريان و آدميان"}]}