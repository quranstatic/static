{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":56,"VerseNumber":17,"Text":"بگردند بر ایشان پسرانی جاودانان‌"},{"SurahNumber":56,"VerseNumber":18,"Text":"با جامها و صراحیها و جامی از باده‌نمایان‌"},{"SurahNumber":56,"VerseNumber":19,"Text":"نه درد سر گیرند از آن و نه از خرد افتند"},{"SurahNumber":56,"VerseNumber":20,"Text":"و میوه‌ای از آنچه برگزینند"},{"SurahNumber":56,"VerseNumber":21,"Text":"و گوشت مرغی از آنچه هوس کنند"},{"SurahNumber":56,"VerseNumber":22,"Text":"و زنان سفیداندام فراخ‌چشمان‌"},{"SurahNumber":56,"VerseNumber":23,"Text":"مانندگان مروارید پوشیده‌"},{"SurahNumber":56,"VerseNumber":24,"Text":"پاداشی بدانچه بودند می‌کردند"},{"SurahNumber":56,"VerseNumber":25,"Text":"نشوند در آن بیهوده و نه گناه بستن را"},{"SurahNumber":56,"VerseNumber":26,"Text":"جز گفتار سلامی سلامی‌"},{"SurahNumber":56,"VerseNumber":27,"Text":"و یاران راست چه یاران راستی‌"},{"SurahNumber":56,"VerseNumber":28,"Text":"زیر درخت سدری بی‌خار"},{"SurahNumber":56,"VerseNumber":29,"Text":"و موزی به هم پیچیده‌"},{"SurahNumber":56,"VerseNumber":30,"Text":"و سایه‌ای کشیده‌"},{"SurahNumber":56,"VerseNumber":31,"Text":"و آبی ریزان‌"},{"SurahNumber":56,"VerseNumber":32,"Text":"و میوه‌ای فراوان‌"},{"SurahNumber":56,"VerseNumber":33,"Text":"نابریده و نه بازداشته‌"},{"SurahNumber":56,"VerseNumber":34,"Text":"و زنانی افراشته (بلندبالا)"},{"SurahNumber":56,"VerseNumber":35,"Text":"همانا پدید آوردیمشان پدید آوردنی‌"},{"SurahNumber":56,"VerseNumber":36,"Text":"پس گردانیدیمشان شوی‌نادیدگانی‌"},{"SurahNumber":56,"VerseNumber":37,"Text":"شوهر دوستانی همسالان‌"},{"SurahNumber":56,"VerseNumber":38,"Text":"برای یاران راست‌"},{"SurahNumber":56,"VerseNumber":39,"Text":"گروهی از پیشینیان‌"},{"SurahNumber":56,"VerseNumber":40,"Text":"و گروهی از بازماندگان‌"},{"SurahNumber":56,"VerseNumber":41,"Text":"و یاران چپ چه یاران چپ‌"},{"SurahNumber":56,"VerseNumber":42,"Text":"در آتش سوراخ‌کننده و آبی جوشان‌"},{"SurahNumber":56,"VerseNumber":43,"Text":"و سایه‌ای از دود سیاه‌"},{"SurahNumber":56,"VerseNumber":44,"Text":"نه خنک و نه گرامی‌"},{"SurahNumber":56,"VerseNumber":45,"Text":"همانا ایشان بودند پیش از این هوسرانان‌"},{"SurahNumber":56,"VerseNumber":46,"Text":"و بودند اصرار می‌ورزیدند بر گناه (یا پیمان‌شکنی) بزرگ‌"},{"SurahNumber":56,"VerseNumber":47,"Text":"و بودند می‌گفتند آیا گاهی که مُردیم و شدیم خاکی و استخوانهائی آیا مائیم برانگیختگان‌"},{"SurahNumber":56,"VerseNumber":48,"Text":"آیا و پدران ما پیشینیان‌"},{"SurahNumber":56,"VerseNumber":49,"Text":"بگو همانا پیشینیان و پسینیان‌"},{"SurahNumber":56,"VerseNumber":50,"Text":"گردآورده شوند بسوی وعده‌گاه روزی دانسته‌"}]}