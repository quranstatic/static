{"Id":34,"LanguageCodes":["ar","ara"],"Name":"ara-quranuthmanihaf1","Author":"Quran Uthmani Hafs No Diacritics","Language":"Arabic","Description":"Arabic","Direction":"rtl","Source":"https://qurancomplex.gov.sa/","Translations":[{"SurahNumber":37,"VerseNumber":52,"Text":"يقول اءنك لمن المصدقين"},{"SurahNumber":37,"VerseNumber":53,"Text":"اءذا متنا وكنا تراب ا وعظما اءنا لمدينون"},{"SurahNumber":37,"VerseNumber":54,"Text":"قال هل انتم مطلعون"},{"SurahNumber":37,"VerseNumber":55,"Text":"فاطلع فرءاه في سواء الجحيم"},{"SurahNumber":37,"VerseNumber":56,"Text":"قال تالله ان كدت لتردين"},{"SurahNumber":37,"VerseNumber":57,"Text":"ولولا نعمة ربي لكنت من المحضرين"},{"SurahNumber":37,"VerseNumber":58,"Text":"افما نحن بميتين"},{"SurahNumber":37,"VerseNumber":59,"Text":"الا موتتنا الاولى وما نحن بمعذبين"},{"SurahNumber":37,"VerseNumber":60,"Text":"ان هذا لهو الفوز العظيم"},{"SurahNumber":37,"VerseNumber":61,"Text":"لمثل هذا فليعمل العملون"},{"SurahNumber":37,"VerseNumber":62,"Text":"اذلك خير نزلا ام شجرة الزقوم"},{"SurahNumber":37,"VerseNumber":63,"Text":"انا جعلنها فتنة للظلمين"},{"SurahNumber":37,"VerseNumber":64,"Text":"انها شجرة تخرج في اصل الجحيم"},{"SurahNumber":37,"VerseNumber":65,"Text":"طلعها كانه رءوس الشيطين"},{"SurahNumber":37,"VerseNumber":66,"Text":"فانهم لاكلون منها فمالون منها البطون"},{"SurahNumber":37,"VerseNumber":67,"Text":"ثم ان لهم عليها لشوب ا من حميم"},{"SurahNumber":37,"VerseNumber":68,"Text":"ثم ان مرجعهم لالى الجحيم"},{"SurahNumber":37,"VerseNumber":69,"Text":"انهم الفوا ءاباءهم ضالين"},{"SurahNumber":37,"VerseNumber":70,"Text":"فهم على ءاثرهم يهرعون"},{"SurahNumber":37,"VerseNumber":71,"Text":"ولقد ضل قبلهم اكثر الاولين"},{"SurahNumber":37,"VerseNumber":72,"Text":"ولقد ارسلنا فيهم منذرين"},{"SurahNumber":37,"VerseNumber":73,"Text":"فانظر كيف كان عقبة المنذرين"},{"SurahNumber":37,"VerseNumber":74,"Text":"الا عباد الله المخلصين"},{"SurahNumber":37,"VerseNumber":75,"Text":"ولقد نادىنا نوح فلنعم المجيبون"},{"SurahNumber":37,"VerseNumber":76,"Text":"ونجينه واهله من الكرب العظيم"}]}