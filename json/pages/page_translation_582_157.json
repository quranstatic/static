{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":78,"VerseNumber":1,"Text":"از چه چیزند پرسش‌کنان‌"},{"SurahNumber":78,"VerseNumber":2,"Text":"از داستان (آگهی) بزرگ‌"},{"SurahNumber":78,"VerseNumber":3,"Text":"آنکه آنانند در آن اختلاف‌کنان‌"},{"SurahNumber":78,"VerseNumber":4,"Text":"نه چنین است زود است بدانند"},{"SurahNumber":78,"VerseNumber":5,"Text":"پس نه چنین است زود است بدانند"},{"SurahNumber":78,"VerseNumber":6,"Text":"آیا نگردانیدیم زمین را آرامگاهی‌"},{"SurahNumber":78,"VerseNumber":7,"Text":"و کوه‌ها را میخهائی‌"},{"SurahNumber":78,"VerseNumber":8,"Text":"و آفریدیم شما را جفتهائی‌"},{"SurahNumber":78,"VerseNumber":9,"Text":"و گردانیدیم خواب شما را بیهشی (یا آسایشی)"},{"SurahNumber":78,"VerseNumber":10,"Text":"و گردانیدیم شب را پوشاکی‌"},{"SurahNumber":78,"VerseNumber":11,"Text":"و گردانیدیم روز را روزی‌گهی‌"},{"SurahNumber":78,"VerseNumber":12,"Text":"و بنیاد نهادیم فراز شما هفتگانه‌ای استوار"},{"SurahNumber":78,"VerseNumber":13,"Text":"و نهادیم چراغی درخشان‌"},{"SurahNumber":78,"VerseNumber":14,"Text":"و فرستادیم از فشرده‌ها آبی ریزان‌"},{"SurahNumber":78,"VerseNumber":15,"Text":"تا برون آریم بدان دانه و رستنی‌"},{"SurahNumber":78,"VerseNumber":16,"Text":"و باغستانی پیچاپیچ‌"},{"SurahNumber":78,"VerseNumber":17,"Text":"همانا روز جداشدن است وعده‌گاهی‌"},{"SurahNumber":78,"VerseNumber":18,"Text":"روزی که دمیده شود در صور پس آیند گروه‌هائی‌"},{"SurahNumber":78,"VerseNumber":19,"Text":"و گشوده شود آسمان پس بگردد درهائی‌"},{"SurahNumber":78,"VerseNumber":20,"Text":"و رانده شوند کوه‌ها پس شوند سرابی‌"},{"SurahNumber":78,"VerseNumber":21,"Text":"همانا دوزخ است کمینگاهی‌"},{"SurahNumber":78,"VerseNumber":22,"Text":"برای سرکشان بازگشتگاهی‌"},{"SurahNumber":78,"VerseNumber":23,"Text":"ماندگانند در آن سالهائی‌"},{"SurahNumber":78,"VerseNumber":24,"Text":"نچشند در آن خنکی و نه نوشابه‌ای‌"},{"SurahNumber":78,"VerseNumber":25,"Text":"مگر آبی جوشان و چرکی‌"},{"SurahNumber":78,"VerseNumber":26,"Text":"کیفری برابر"},{"SurahNumber":78,"VerseNumber":27,"Text":"که بودند ایشان امید نداشتند حسابی‌"},{"SurahNumber":78,"VerseNumber":28,"Text":"و تکذیب کردند آیتهای ما را تکذیبی‌"},{"SurahNumber":78,"VerseNumber":29,"Text":"و هر چیزی را فراآوردیم در نامه‌ای‌"},{"SurahNumber":78,"VerseNumber":30,"Text":"پس بچشید که هرگز نیفزائیم شما را جز عذابی‌"}]}