{"Id":150,"LanguageCodes":["fa","fas"],"Name":"fas-abdolmohammaday","Author":"Abdolmohammad Ayati","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":103,"VerseNumber":1,"Text":"سوگند به اين زمان،"},{"SurahNumber":103,"VerseNumber":2,"Text":"كه آدمى در خسران است"},{"SurahNumber":103,"VerseNumber":3,"Text":"مگر آنها كه ايمان آوردند و كارهاى شايسته كردند و يكديگر را به حق سفارش كردند و يكديگر را به صبر سفارش كردند"},{"SurahNumber":104,"VerseNumber":1,"Text":"واى بر هر غيبت‌كننده عيبجويى؛"},{"SurahNumber":104,"VerseNumber":2,"Text":"آن كه مالى گرد كرد و حساب آن نگه داشت"},{"SurahNumber":104,"VerseNumber":3,"Text":"مى‌پندارد كه دارايى‌اش جاويدانش گرداند"},{"SurahNumber":104,"VerseNumber":4,"Text":"نه چنين است. كه او را در حُطَمه اندازند"},{"SurahNumber":104,"VerseNumber":5,"Text":"و تو چه دانى كه حطمه چيست؟"},{"SurahNumber":104,"VerseNumber":6,"Text":"آتش افروخته خداست،"},{"SurahNumber":104,"VerseNumber":7,"Text":"كه بر دلها غلبه مى‌يابد"},{"SurahNumber":104,"VerseNumber":8,"Text":"و از هر سو در ميانشان گرفته است،"},{"SurahNumber":104,"VerseNumber":9,"Text":"در شعله‌هايى برافراشته"},{"SurahNumber":105,"VerseNumber":1,"Text":"آيا نديده‌اى كه پروردگارت با اصحاب فيل چه كرد؟"},{"SurahNumber":105,"VerseNumber":2,"Text":"آيا مكرشان را باطل نساخت؟"},{"SurahNumber":105,"VerseNumber":3,"Text":"و بر سر آنها پرندگانى فوج‌فوج فرستاد،"},{"SurahNumber":105,"VerseNumber":4,"Text":"تا آنها را با سِجّيل سنگباران كردند"},{"SurahNumber":105,"VerseNumber":5,"Text":"و آنان را چون كاه پس‌مانده در آخور ساخت"}]}