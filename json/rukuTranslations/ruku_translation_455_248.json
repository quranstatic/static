{"Id":248,"LanguageCodes":["ml","mal"],"Name":"mal-muhammadkarakun-la","Author":"Muhammad Karakunnu And Vanidas Elayavoor","Language":"Malayalam","Description":"Malayalam - Transliteration","Direction":"ltr","Source":"http://tanzil.net","Translations":[{"SurahNumber":51,"VerseNumber":1,"Text":"peati parattunnava saksi"},{"SurahNumber":51,"VerseNumber":2,"Text":"kanatta meghannale vahikkunnava saksi"},{"SurahNumber":51,"VerseNumber":3,"Text":"tenni ninnunnava saksi"},{"SurahNumber":51,"VerseNumber":4,"Text":"karyannal viticcu keatukkunnava saksi"},{"SurahNumber":51,"VerseNumber":5,"Text":"ninnalkku vagdattam ceyyappetunna karyam satyam tanne; tircca"},{"SurahNumber":51,"VerseNumber":6,"Text":"n'yayavidhi natakkuka tanne ceyyum"},{"SurahNumber":51,"VerseNumber":7,"Text":"vividha sancarapathannalulla akasam saksi"},{"SurahNumber":51,"VerseNumber":8,"Text":"tirccayayum ninnal vyatyasta bhiprayakkaran"},{"SurahNumber":51,"VerseNumber":9,"Text":"nervaliyil ninn akannavan i satyattil ninn vyaticalikkunnu"},{"SurahNumber":51,"VerseNumber":10,"Text":"uhannale avalambikkunnavar nasiccatutanne"},{"SurahNumber":51,"VerseNumber":11,"Text":"avarea vivarakketil matimarannavar"},{"SurahNumber":51,"VerseNumber":12,"Text":"avar ceadikkunnu, n'yayavidhiyute dinam eppealenn"},{"SurahNumber":51,"VerseNumber":13,"Text":"atea, avar narakagniyil eriyunna dinam tanne"},{"SurahNumber":51,"VerseNumber":14,"Text":"ann avareat parayum: ita, ninnalkkulla siksa. it anubhaviccukealluka. ninnal titukkam katti avasyappettukeantirunnat itanallea"},{"SurahNumber":51,"VerseNumber":15,"Text":"ennal suksmata palikkunnavar svargiyaramannalilum aruvikalilumayirikkum"},{"SurahNumber":51,"VerseNumber":16,"Text":"tannalute nathanre varadanannal anubhavikkunnavarayi. avar neratte sadvrttarayirunnuvallea"},{"SurahNumber":51,"VerseNumber":17,"Text":"ratriyil alpanerame avar urannaruntayirunnullu"},{"SurahNumber":51,"VerseNumber":18,"Text":"avar ravinre otuvuvelakalil papameacanam tetunnavarumayirunnu"},{"SurahNumber":51,"VerseNumber":19,"Text":"avarute sampadyannalil ceadikkunnavannum niralambanum avakasamuntayirunnu"},{"SurahNumber":51,"VerseNumber":20,"Text":"drdhavisvasikalkk bhumiyil niravadhi telivukalunt"},{"SurahNumber":51,"VerseNumber":21,"Text":"ninnalil tanneyumunt. ennittum ninnal ateannum kant manas'silakkunnillennea"},{"SurahNumber":51,"VerseNumber":22,"Text":"akasattil ninnalkk upajivanamunt. ninnale takkit ceytukeantirikkunna siksayum"},{"SurahNumber":51,"VerseNumber":23,"Text":"akasabhumikalute nathan saksi. ninnal sansariccukeantirikkunnu ennapeale it satyamakunnu"}]}