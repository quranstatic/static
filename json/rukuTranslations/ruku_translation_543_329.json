{"Id":329,"LanguageCodes":["es","spa"],"Name":"spa-juliocortes-la","Author":"Julio Cortes","Language":"Spanish","Description":"Spanish - Transliteration","Direction":"ltr","Source":"http://tanzil.net","Translations":[{"SurahNumber":101,"VerseNumber":1,"Text":"¡La Calamidad"},{"SurahNumber":101,"VerseNumber":2,"Text":"¿Que es la Calamidad"},{"SurahNumber":101,"VerseNumber":3,"Text":"Y ¿como sabras que es la calamidad"},{"SurahNumber":101,"VerseNumber":4,"Text":"El dia que los hombres parezcan mariposas dispersas"},{"SurahNumber":101,"VerseNumber":5,"Text":"y las montanas copos de lana cardada"},{"SurahNumber":101,"VerseNumber":6,"Text":"entonces, el autor de obras de peso"},{"SurahNumber":101,"VerseNumber":7,"Text":"gozara de una vida agradable"},{"SurahNumber":101,"VerseNumber":8,"Text":"mientras que el autor de obras ligeras"},{"SurahNumber":101,"VerseNumber":9,"Text":"tendra un abismo por morada"},{"SurahNumber":101,"VerseNumber":10,"Text":"Y ¿como sabras que es"},{"SurahNumber":101,"VerseNumber":11,"Text":"¡Un fuego ardiente"}]}