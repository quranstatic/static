{"Id":34,"LanguageCodes":["ar","ara"],"Name":"ara-quranuthmanihaf1","Author":"Quran Uthmani Hafs No Diacritics","Language":"Arabic","Description":"Arabic","Direction":"rtl","Source":"https://qurancomplex.gov.sa/","Translations":[{"SurahNumber":70,"VerseNumber":1,"Text":"سال سايل بعذاب واقع"},{"SurahNumber":70,"VerseNumber":2,"Text":"للكفرين ليس له دافع"},{"SurahNumber":70,"VerseNumber":3,"Text":"من الله ذي المعارج"},{"SurahNumber":70,"VerseNumber":4,"Text":"تعرج المليكة والروح اليه في يوم كان مقداره خمسين الف سنة"},{"SurahNumber":70,"VerseNumber":5,"Text":"فاصبر صبر ا جميلا"},{"SurahNumber":70,"VerseNumber":6,"Text":"انهم يرونه بعيد ا"},{"SurahNumber":70,"VerseNumber":7,"Text":"ونرىه قريب ا"},{"SurahNumber":70,"VerseNumber":8,"Text":"يوم تكون السماء كالمهل"},{"SurahNumber":70,"VerseNumber":9,"Text":"وتكون الجبال كالعهن"},{"SurahNumber":70,"VerseNumber":10,"Text":"ولا يسل حميم حميم ا"},{"SurahNumber":70,"VerseNumber":11,"Text":"يبصرونهم يود المجرم لو يفتدي من عذاب يوميذ ببنيه"},{"SurahNumber":70,"VerseNumber":12,"Text":"وصحبته واخيه"},{"SurahNumber":70,"VerseNumber":13,"Text":"وفصيلته التي تويه"},{"SurahNumber":70,"VerseNumber":14,"Text":"ومن في الارض جميع ا ثم ينجيه"},{"SurahNumber":70,"VerseNumber":15,"Text":"كلا انها لظى"},{"SurahNumber":70,"VerseNumber":16,"Text":"نزاعة للشوى"},{"SurahNumber":70,"VerseNumber":17,"Text":"تدعوا من ادبر وتولى"},{"SurahNumber":70,"VerseNumber":18,"Text":"وجمع فاوعى"},{"SurahNumber":70,"VerseNumber":19,"Text":"۞ان الانسن خلق هلوعا"},{"SurahNumber":70,"VerseNumber":20,"Text":"اذا مسه الشر جزوع ا"},{"SurahNumber":70,"VerseNumber":21,"Text":"واذا مسه الخير منوعا"},{"SurahNumber":70,"VerseNumber":22,"Text":"الا المصلين"},{"SurahNumber":70,"VerseNumber":23,"Text":"الذين هم على صلاتهم دايمون"},{"SurahNumber":70,"VerseNumber":24,"Text":"والذين في امولهم حق معلوم"},{"SurahNumber":70,"VerseNumber":25,"Text":"للسايل والمحروم"},{"SurahNumber":70,"VerseNumber":26,"Text":"والذين يصدقون بيوم الدين"},{"SurahNumber":70,"VerseNumber":27,"Text":"والذين هم من عذاب ربهم مشفقون"},{"SurahNumber":70,"VerseNumber":28,"Text":"ان عذاب ربهم غير مامون"},{"SurahNumber":70,"VerseNumber":29,"Text":"والذين هم لفروجهم حفظون"},{"SurahNumber":70,"VerseNumber":30,"Text":"الا على ازوجهم او ما ملكت ايمنهم فانهم غير ملومين"},{"SurahNumber":70,"VerseNumber":31,"Text":"فمن ابتغى وراء ذلك فاوليك هم العادون"},{"SurahNumber":70,"VerseNumber":32,"Text":"والذين هم لامنتهم وعهدهم رعون"},{"SurahNumber":70,"VerseNumber":33,"Text":"والذين هم بشهدتهم قايمون"},{"SurahNumber":70,"VerseNumber":34,"Text":"والذين هم على صلاتهم يحافظون"},{"SurahNumber":70,"VerseNumber":35,"Text":"اوليك في جنت مكرمون"}]}