{"Id":195,"LanguageCodes":["hr","hrv"],"Name":"hrv-unknown-la","Author":"Unknown","Language":"Croatian","Description":"Croatian - Transliteration","Direction":"ltr","Source":"http://donatequran.com/","Translations":[{"SurahNumber":77,"VerseNumber":1,"Text":"Tako mi izaslanika uzastopnih"},{"SurahNumber":77,"VerseNumber":2,"Text":"Te onih koji bjesne uraganski"},{"SurahNumber":77,"VerseNumber":3,"Text":"I onih koji rasprostiru prostiranjem"},{"SurahNumber":77,"VerseNumber":4,"Text":"Te onih koji razdvajaju razdvajanjem"},{"SurahNumber":77,"VerseNumber":5,"Text":"Te onih koji dostavljaju Opomenu"},{"SurahNumber":77,"VerseNumber":6,"Text":"Opravdanje ili upozorenje"},{"SurahNumber":77,"VerseNumber":7,"Text":"Uistinu, ono cime vam se prijeti dogodice se"},{"SurahNumber":77,"VerseNumber":8,"Text":"Pa kad se zvijezde pogase"},{"SurahNumber":77,"VerseNumber":9,"Text":"I kad se nebo rastvori"},{"SurahNumber":77,"VerseNumber":10,"Text":"I kad se brda zdrobe (u prasinu)"},{"SurahNumber":77,"VerseNumber":11,"Text":"I kad se poslanicima vrijeme odredi"},{"SurahNumber":77,"VerseNumber":12,"Text":"Za koji dan je odgođeno"},{"SurahNumber":77,"VerseNumber":13,"Text":"Za Dan razdvajanja"},{"SurahNumber":77,"VerseNumber":14,"Text":"A sta znas ti sta je Dan razdvajanja"},{"SurahNumber":77,"VerseNumber":15,"Text":"Tesko Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":16,"Text":"Zar nismo unistili ranije"},{"SurahNumber":77,"VerseNumber":17,"Text":"Zatim dali da ih slijede kasniji"},{"SurahNumber":77,"VerseNumber":18,"Text":"Tako postupamo sa zlocincima"},{"SurahNumber":77,"VerseNumber":19,"Text":"Tesko Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":20,"Text":"Zar vas ne stvaramo od tekucine prezrene"},{"SurahNumber":77,"VerseNumber":21,"Text":"Pa je stavljamo u boraviste postojano"},{"SurahNumber":77,"VerseNumber":22,"Text":"Do roka poznatog"},{"SurahNumber":77,"VerseNumber":23,"Text":"Pa odmjeravamo, ta divni su Određivaci"},{"SurahNumber":77,"VerseNumber":24,"Text":"Tesko Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":25,"Text":"Zar nismo ucinili Zemlju sabiralistem"},{"SurahNumber":77,"VerseNumber":26,"Text":"Zivih i mrtvih"},{"SurahNumber":77,"VerseNumber":27,"Text":"I nacinili na njoj gore stabilne, visoke, i napojili vas vodom slatkom"},{"SurahNumber":77,"VerseNumber":28,"Text":"Tesko Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":29,"Text":"Idite onom sta ste poricali"},{"SurahNumber":77,"VerseNumber":30,"Text":"Idite prema sjeni sa tri grane"},{"SurahNumber":77,"VerseNumber":31,"Text":"Bez hlada ce biti, a nece koristiti protiv plamena"},{"SurahNumber":77,"VerseNumber":32,"Text":"Uistinu! Izbacivace ona iskre kao dvorac"},{"SurahNumber":77,"VerseNumber":33,"Text":"Kao da su one kamile zute"},{"SurahNumber":77,"VerseNumber":34,"Text":"Tesko Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":35,"Text":"Ovo je Dan kad nece govoriti"},{"SurahNumber":77,"VerseNumber":36,"Text":"Niti ce im se dopustiti, pa da se opravdavaju"},{"SurahNumber":77,"VerseNumber":37,"Text":"Tesko Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":38,"Text":"Ovo je Dan odluke! Sabrali smo vas i prve"},{"SurahNumber":77,"VerseNumber":39,"Text":"Pa ako vi imate varku - ta prevarite Me"},{"SurahNumber":77,"VerseNumber":40,"Text":"Tesko Tog dana poricateljima"}]}