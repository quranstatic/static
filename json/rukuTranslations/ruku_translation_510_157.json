{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":74,"VerseNumber":1,"Text":"ای به جامه خواب‌رفته‌"},{"SurahNumber":74,"VerseNumber":2,"Text":"بپای شو پس بترسان‌"},{"SurahNumber":74,"VerseNumber":3,"Text":"و پروردگار خویش را بزرگ شمر"},{"SurahNumber":74,"VerseNumber":4,"Text":"و جامه‌های خویش را پاک ساز"},{"SurahNumber":74,"VerseNumber":5,"Text":"و چرک را دوری گزین‌"},{"SurahNumber":74,"VerseNumber":6,"Text":"و منّت منه که فزونی جوئی‌"},{"SurahNumber":74,"VerseNumber":7,"Text":"و برای پروردگار خویش بشکیب‌"},{"SurahNumber":74,"VerseNumber":8,"Text":"پس گاهی که دمیده شد در صور"},{"SurahNumber":74,"VerseNumber":9,"Text":"آن است آن روز روزی دشوار"},{"SurahNumber":74,"VerseNumber":10,"Text":"بر کافران ناهموار"},{"SurahNumber":74,"VerseNumber":11,"Text":"بهل مرا با آنکه آفریدم تنها"},{"SurahNumber":74,"VerseNumber":12,"Text":"و نهادم برایش مالی پهناور"},{"SurahNumber":74,"VerseNumber":13,"Text":"و پسرانی گواهان‌"},{"SurahNumber":74,"VerseNumber":14,"Text":"و آماده کردم برایش آمادگی‌"},{"SurahNumber":74,"VerseNumber":15,"Text":"سپس امید دارد که بیفزایم‌"},{"SurahNumber":74,"VerseNumber":16,"Text":"نه چنین است همانا او است آیتهای ما را دشمن‌"},{"SurahNumber":74,"VerseNumber":17,"Text":"زود است رسانمش به عذابی سخت‌"},{"SurahNumber":74,"VerseNumber":18,"Text":"همانا او اندیشید و سنجید"},{"SurahNumber":74,"VerseNumber":19,"Text":"پس کشته شود چگونه سنجید"},{"SurahNumber":74,"VerseNumber":20,"Text":"سپس کشته شود چگونه سنجید"},{"SurahNumber":74,"VerseNumber":21,"Text":"پس نگریست‌"},{"SurahNumber":74,"VerseNumber":22,"Text":"پس چهره دژم ساخت و روی در هم کشید"},{"SurahNumber":74,"VerseNumber":23,"Text":"پس پشت کرد و کبر ورزید"},{"SurahNumber":74,"VerseNumber":24,"Text":"پس گفت نیست این جز جادوئی که رسد"},{"SurahNumber":74,"VerseNumber":25,"Text":"نیست این جز گفتار بشر"},{"SurahNumber":74,"VerseNumber":26,"Text":"زود است چشانیمش دوزخ‌"},{"SurahNumber":74,"VerseNumber":27,"Text":"و ندانی تو چیست دوزخ‌"},{"SurahNumber":74,"VerseNumber":28,"Text":"نه به جای گذارد و نه فروهلد"},{"SurahNumber":74,"VerseNumber":29,"Text":"دگرگون سازد پوست را"},{"SurahNumber":74,"VerseNumber":30,"Text":"بر آن است نوزده تن‌"},{"SurahNumber":74,"VerseNumber":31,"Text":"و نگردانیدیم یاران آتش را مگر فرشتگانی و نگردانیدیم شمار آنان را جز آزمایشی برای آنان که کفر ورزیدند تا یقین رسانند آنان که داده شدند کتاب را و بیفزایند آنان که ایمان آوردند ایمانی و دودل نکردند آنان که داده شدند کتاب را و مؤمنان و تا گویند آنان که در دلهاشان بیماری است و کافران چه چیز خواست خدا بدین مثَل چنین گمراه سازد خدا هر که را که خواهد و رهبری کند هر که را که خواهد و نداند لشگرهای پروردگارت را جز او و نیست آن جز یادآوریی برای بشر"}]}