{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":56,"VerseNumber":1,"Text":"گاهی که فرود آید فرودآینده‌"},{"SurahNumber":56,"VerseNumber":2,"Text":"نیست فرود آمدنش را دروغی‌"},{"SurahNumber":56,"VerseNumber":3,"Text":"فرودآرنده و بالابرنده‌"},{"SurahNumber":56,"VerseNumber":4,"Text":"گاهی که بلرزد زمین لرزیدنی‌"},{"SurahNumber":56,"VerseNumber":5,"Text":"و رانده شوند کوه‌ها راندنی‌"},{"SurahNumber":56,"VerseNumber":6,"Text":"پس گردند گردی پراکنده‌"},{"SurahNumber":56,"VerseNumber":7,"Text":"و شوید گروه‌هایی سه‌گانه‌"},{"SurahNumber":56,"VerseNumber":8,"Text":"پس یاران راست چیست یاران راست‌"},{"SurahNumber":56,"VerseNumber":9,"Text":"و یاران چپ چیست یاران چپ‌"},{"SurahNumber":56,"VerseNumber":10,"Text":"و پیش‌آهنگان (پیشی‌گیرندگان) آن پیش‌آهنگان‌"},{"SurahNumber":56,"VerseNumber":11,"Text":"آنانند نزدیک‌گشتگان‌"},{"SurahNumber":56,"VerseNumber":12,"Text":"در بهشتهای نعمتها"},{"SurahNumber":56,"VerseNumber":13,"Text":"پاره‌ای از پیشینیان‌"},{"SurahNumber":56,"VerseNumber":14,"Text":"و اندکی از آیندگان‌"},{"SurahNumber":56,"VerseNumber":15,"Text":"بر تختهائی بافته‌"},{"SurahNumber":56,"VerseNumber":16,"Text":"تکیه‌کنندگان بر آنها روی به روی‌"},{"SurahNumber":56,"VerseNumber":17,"Text":"بگردند بر ایشان پسرانی جاودانان‌"},{"SurahNumber":56,"VerseNumber":18,"Text":"با جامها و صراحیها و جامی از باده‌نمایان‌"},{"SurahNumber":56,"VerseNumber":19,"Text":"نه درد سر گیرند از آن و نه از خرد افتند"},{"SurahNumber":56,"VerseNumber":20,"Text":"و میوه‌ای از آنچه برگزینند"},{"SurahNumber":56,"VerseNumber":21,"Text":"و گوشت مرغی از آنچه هوس کنند"},{"SurahNumber":56,"VerseNumber":22,"Text":"و زنان سفیداندام فراخ‌چشمان‌"},{"SurahNumber":56,"VerseNumber":23,"Text":"مانندگان مروارید پوشیده‌"},{"SurahNumber":56,"VerseNumber":24,"Text":"پاداشی بدانچه بودند می‌کردند"},{"SurahNumber":56,"VerseNumber":25,"Text":"نشوند در آن بیهوده و نه گناه بستن را"},{"SurahNumber":56,"VerseNumber":26,"Text":"جز گفتار سلامی سلامی‌"},{"SurahNumber":56,"VerseNumber":27,"Text":"و یاران راست چه یاران راستی‌"},{"SurahNumber":56,"VerseNumber":28,"Text":"زیر درخت سدری بی‌خار"},{"SurahNumber":56,"VerseNumber":29,"Text":"و موزی به هم پیچیده‌"},{"SurahNumber":56,"VerseNumber":30,"Text":"و سایه‌ای کشیده‌"},{"SurahNumber":56,"VerseNumber":31,"Text":"و آبی ریزان‌"},{"SurahNumber":56,"VerseNumber":32,"Text":"و میوه‌ای فراوان‌"},{"SurahNumber":56,"VerseNumber":33,"Text":"نابریده و نه بازداشته‌"},{"SurahNumber":56,"VerseNumber":34,"Text":"و زنانی افراشته (بلندبالا)"},{"SurahNumber":56,"VerseNumber":35,"Text":"همانا پدید آوردیمشان پدید آوردنی‌"},{"SurahNumber":56,"VerseNumber":36,"Text":"پس گردانیدیمشان شوی‌نادیدگانی‌"},{"SurahNumber":56,"VerseNumber":37,"Text":"شوهر دوستانی همسالان‌"},{"SurahNumber":56,"VerseNumber":38,"Text":"برای یاران راست‌"}]}