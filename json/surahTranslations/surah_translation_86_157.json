{"Id":157,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadkazemmo","Author":"Mohammad Kazem Moezzi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":86,"VerseNumber":1,"Text":"سوگند به آسمان و به شب درآینده‌"},{"SurahNumber":86,"VerseNumber":2,"Text":"و چه دانستت چیست شب درآینده‌"},{"SurahNumber":86,"VerseNumber":3,"Text":"آن ستاره تابنده‌"},{"SurahNumber":86,"VerseNumber":4,"Text":"نیست کسی جز بر او است نگهبانی‌"},{"SurahNumber":86,"VerseNumber":5,"Text":"پس بنگرد انسان از چه شد آفریده‌"},{"SurahNumber":86,"VerseNumber":6,"Text":"آفریده شد از آبی جهنده‌"},{"SurahNumber":86,"VerseNumber":7,"Text":"که برون آید از میان کمر و استخوانهای سینه‌"},{"SurahNumber":86,"VerseNumber":8,"Text":"همانا او است بر بازگردانیدنش توانا"},{"SurahNumber":86,"VerseNumber":9,"Text":"روزی که فاش شوند رازهای درون‌"},{"SurahNumber":86,"VerseNumber":10,"Text":"پس نیستش نیروئی و نه یاوری‌"},{"SurahNumber":86,"VerseNumber":11,"Text":"سوگند به آسمان دارای برگشت یا باران‌"},{"SurahNumber":86,"VerseNumber":12,"Text":"و به زمین دارای شکاف‌"},{"SurahNumber":86,"VerseNumber":13,"Text":"که آن است همانا گفتاری جداسازنده‌"},{"SurahNumber":86,"VerseNumber":14,"Text":"و نیست آن یاوه (شوخی)"},{"SurahNumber":86,"VerseNumber":15,"Text":"همانا ایشان نیرنگ آرند نیرنگی‌"},{"SurahNumber":86,"VerseNumber":16,"Text":"و نیرنگ آرم نیرنگی‌"},{"SurahNumber":86,"VerseNumber":17,"Text":"پس مهلت ده کافران را مهلتشان ده اندکی‌"}]}