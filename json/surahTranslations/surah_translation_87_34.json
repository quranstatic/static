{"Id":34,"LanguageCodes":["ar","ara"],"Name":"ara-quranuthmanihaf1","Author":"Quran Uthmani Hafs No Diacritics","Language":"Arabic","Description":"Arabic","Direction":"rtl","Source":"https://qurancomplex.gov.sa/","Translations":[{"SurahNumber":87,"VerseNumber":1,"Text":"سبح اسم ربك الاعلى"},{"SurahNumber":87,"VerseNumber":2,"Text":"الذي خلق فسوى"},{"SurahNumber":87,"VerseNumber":3,"Text":"والذي قدر فهدى"},{"SurahNumber":87,"VerseNumber":4,"Text":"والذي اخرج المرعى"},{"SurahNumber":87,"VerseNumber":5,"Text":"فجعله غثاء احوى"},{"SurahNumber":87,"VerseNumber":6,"Text":"سنقريك فلا تنسى"},{"SurahNumber":87,"VerseNumber":7,"Text":"الا ما شاء الله انه يعلم الجهر وما يخفى"},{"SurahNumber":87,"VerseNumber":8,"Text":"ونيسرك لليسرى"},{"SurahNumber":87,"VerseNumber":9,"Text":"فذكر ان نفعت الذكرى"},{"SurahNumber":87,"VerseNumber":10,"Text":"سيذكر من يخشى"},{"SurahNumber":87,"VerseNumber":11,"Text":"ويتجنبها الاشقى"},{"SurahNumber":87,"VerseNumber":12,"Text":"الذي يصلى النار الكبرى"},{"SurahNumber":87,"VerseNumber":13,"Text":"ثم لا يموت فيها ولا يحيى"},{"SurahNumber":87,"VerseNumber":14,"Text":"قد افلح من تزكى"},{"SurahNumber":87,"VerseNumber":15,"Text":"وذكر اسم ربه فصلى"},{"SurahNumber":87,"VerseNumber":16,"Text":"بل توثرون الحيوة الدنيا"},{"SurahNumber":87,"VerseNumber":17,"Text":"والاخرة خير وابقى"},{"SurahNumber":87,"VerseNumber":18,"Text":"ان هذا لفي الصحف الاولى"},{"SurahNumber":87,"VerseNumber":19,"Text":"صحف ابرهيم وموسى"}]}