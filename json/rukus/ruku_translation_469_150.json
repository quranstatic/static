{"Id":150,"LanguageCodes":["fa","fas"],"Name":"fas-abdolmohammaday","Author":"Abdolmohammad Ayati","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":56,"VerseNumber":1,"Text":"چون قيامت واقع شود،"},{"SurahNumber":56,"VerseNumber":2,"Text":"كه در واقع‌شدنش هيچ دروغ نيست،"},{"SurahNumber":56,"VerseNumber":3,"Text":"گروهى را خواركننده است و گروهى را برافرازنده"},{"SurahNumber":56,"VerseNumber":4,"Text":"آنگاه كه زمين به سختى بلرزد،"},{"SurahNumber":56,"VerseNumber":5,"Text":"و كوه‌ها به تمامى متلاشى شوند،"},{"SurahNumber":56,"VerseNumber":6,"Text":"و چون غبارى پراكنده گردند،"},{"SurahNumber":56,"VerseNumber":7,"Text":"شما سه گروه باشيد"},{"SurahNumber":56,"VerseNumber":8,"Text":"يكى اهل سعادت. اهل سعادت چه حال دارند؟"},{"SurahNumber":56,"VerseNumber":9,"Text":"ديگر، اهل شقاوت. اهل شقاوت چه حال دارند؟"},{"SurahNumber":56,"VerseNumber":10,"Text":"سه ديگر، آنها كه سبقت جسته بودند و اينك پيش افتاده‌اند"},{"SurahNumber":56,"VerseNumber":11,"Text":"اينان مقرّبانند،"},{"SurahNumber":56,"VerseNumber":12,"Text":"در بهشتهاى پرنعمت"},{"SurahNumber":56,"VerseNumber":13,"Text":"گروهى از پيشينيان،"},{"SurahNumber":56,"VerseNumber":14,"Text":"و اندكى از آنها كه از پى آمده‌اند،"},{"SurahNumber":56,"VerseNumber":15,"Text":"بر تختهايى مرصّع،"},{"SurahNumber":56,"VerseNumber":16,"Text":"روبروى هم بر آنها تكيه زده‌اند"},{"SurahNumber":56,"VerseNumber":17,"Text":"پسرانى همواره جوان گردشان مى‌چرخند،"},{"SurahNumber":56,"VerseNumber":18,"Text":"با قدحها و ابريقها و جامهايى از شرابى كه در جويها جارى است"},{"SurahNumber":56,"VerseNumber":19,"Text":"از نوشيدنش نه سردرد گيرند و نه بيهوش شوند"},{"SurahNumber":56,"VerseNumber":20,"Text":"و ميوه‌هايى كه خود برمى‌گزينند"},{"SurahNumber":56,"VerseNumber":21,"Text":"و گوشت پرنده هر چه بخواهند"},{"SurahNumber":56,"VerseNumber":22,"Text":"و حوران درشت چشم،"},{"SurahNumber":56,"VerseNumber":23,"Text":"همانند مرواريدهايى در صدف"},{"SurahNumber":56,"VerseNumber":24,"Text":"همه به پاداش كارهايى كه مى‌كرده‌اند"},{"SurahNumber":56,"VerseNumber":25,"Text":"در آنجا نه سخن لغو شنوند و نه گناه‌آلود"},{"SurahNumber":56,"VerseNumber":26,"Text":"جز يك سخن: سلام، سلام"},{"SurahNumber":56,"VerseNumber":27,"Text":"اما اصحاب سعادت، اصحاب سعادت چه حال دارند؟"},{"SurahNumber":56,"VerseNumber":28,"Text":"در زير درخت سدر بى‌خار،"},{"SurahNumber":56,"VerseNumber":29,"Text":"و درخت موزى كه ميوه‌اش بر يكديگر چيده‌شده،"},{"SurahNumber":56,"VerseNumber":30,"Text":"و سايه‌اى دايم،"},{"SurahNumber":56,"VerseNumber":31,"Text":"و آبى همواره جارى،"},{"SurahNumber":56,"VerseNumber":32,"Text":"و ميوه‌اى بسيار،"},{"SurahNumber":56,"VerseNumber":33,"Text":"كه نه منقطع مى‌گردد و نه كس را از آن باز دارند"},{"SurahNumber":56,"VerseNumber":34,"Text":"و زنانى ارجمند"},{"SurahNumber":56,"VerseNumber":35,"Text":"آن زنان را ما بيافريديم، آفريدنى"},{"SurahNumber":56,"VerseNumber":36,"Text":"و دوشيزگان ساختيم"},{"SurahNumber":56,"VerseNumber":37,"Text":"معشوق همسران خويشند،"},{"SurahNumber":56,"VerseNumber":38,"Text":"براى اصحاب سعادت"}]}