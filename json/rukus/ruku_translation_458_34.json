{"Id":34,"LanguageCodes":["ar","ara"],"Name":"ara-quranuthmanihaf1","Author":"Quran Uthmani Hafs No Diacritics","Language":"Arabic","Description":"Arabic","Direction":"rtl","Source":"https://qurancomplex.gov.sa/","Translations":[{"SurahNumber":52,"VerseNumber":1,"Text":"والطور"},{"SurahNumber":52,"VerseNumber":2,"Text":"وكتب مسطور"},{"SurahNumber":52,"VerseNumber":3,"Text":"في رق منشور"},{"SurahNumber":52,"VerseNumber":4,"Text":"والبيت المعمور"},{"SurahNumber":52,"VerseNumber":5,"Text":"والسقف المرفوع"},{"SurahNumber":52,"VerseNumber":6,"Text":"والبحر المسجور"},{"SurahNumber":52,"VerseNumber":7,"Text":"ان عذاب ربك لوقع"},{"SurahNumber":52,"VerseNumber":8,"Text":"ما له من دافع"},{"SurahNumber":52,"VerseNumber":9,"Text":"يوم تمور السماء مور ا"},{"SurahNumber":52,"VerseNumber":10,"Text":"وتسير الجبال سير ا"},{"SurahNumber":52,"VerseNumber":11,"Text":"فويل يوميذ للمكذبين"},{"SurahNumber":52,"VerseNumber":12,"Text":"الذين هم في خوض يلعبون"},{"SurahNumber":52,"VerseNumber":13,"Text":"يوم يدعون الى نار جهنم دعا"},{"SurahNumber":52,"VerseNumber":14,"Text":"هذه النار التي كنتم بها تكذبون"},{"SurahNumber":52,"VerseNumber":15,"Text":"افسحر هذا ام انتم لا تبصرون"},{"SurahNumber":52,"VerseNumber":16,"Text":"اصلوها فاصبروا او لا تصبروا سواء عليكم انما تجزون ما كنتم تعملون"},{"SurahNumber":52,"VerseNumber":17,"Text":"ان المتقين في جنت ونعيم"},{"SurahNumber":52,"VerseNumber":18,"Text":"فكهين بما ءاتىهم ربهم ووقىهم ربهم عذاب الجحيم"},{"SurahNumber":52,"VerseNumber":19,"Text":"كلوا واشربوا هنيا بما كنتم تعملون"},{"SurahNumber":52,"VerseNumber":20,"Text":"متكين على سرر مصفوفة وزوجنهم بحور عين"},{"SurahNumber":52,"VerseNumber":21,"Text":"والذين ءامنوا واتبعتهم ذريتهم بايمن الحقنا بهم ذريتهم وما التنهم من عملهم من شيء كل امري بما كسب رهين"},{"SurahNumber":52,"VerseNumber":22,"Text":"وامددنهم بفكهة ولحم مما يشتهون"},{"SurahNumber":52,"VerseNumber":23,"Text":"يتنزعون فيها كاس ا لا لغو فيها ولا تاثيم"},{"SurahNumber":52,"VerseNumber":24,"Text":"۞ويطوف عليهم غلمان لهم كانهم لولو مكنون"},{"SurahNumber":52,"VerseNumber":25,"Text":"واقبل بعضهم على بعض يتساءلون"},{"SurahNumber":52,"VerseNumber":26,"Text":"قالوا انا كنا قبل في اهلنا مشفقين"},{"SurahNumber":52,"VerseNumber":27,"Text":"فمن الله علينا ووقىنا عذاب السموم"},{"SurahNumber":52,"VerseNumber":28,"Text":"انا كنا من قبل ندعوه انه هو البر الرحيم"}]}