{"Id":150,"LanguageCodes":["fa","fas"],"Name":"fas-abdolmohammaday","Author":"Abdolmohammad Ayati","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":101,"VerseNumber":1,"Text":"قارعه"},{"SurahNumber":101,"VerseNumber":2,"Text":"چيست قارعه؟"},{"SurahNumber":101,"VerseNumber":3,"Text":"و تو چه دانى كه قارعه چيست؟"},{"SurahNumber":101,"VerseNumber":4,"Text":"روزى است كه مردم چون پروانگان پراكنده باشند،"},{"SurahNumber":101,"VerseNumber":5,"Text":"و كوه‌ها چون پشم‌زده شده"},{"SurahNumber":101,"VerseNumber":6,"Text":"اما هر كه كفّه ترازويش سنگين باشد،"},{"SurahNumber":101,"VerseNumber":7,"Text":"در يك زندگى پسنديده است"},{"SurahNumber":101,"VerseNumber":8,"Text":"و اما هر كه كفه ترازويش سبك باشد،"},{"SurahNumber":101,"VerseNumber":9,"Text":"جايگاهش در هاويه است"},{"SurahNumber":101,"VerseNumber":10,"Text":"و تو چه دانى كه هاويه چيست؟"},{"SurahNumber":101,"VerseNumber":11,"Text":"آتشى است در نهايت گرمى"}]}