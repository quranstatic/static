{"Id":34,"LanguageCodes":["ar","ara"],"Name":"ara-quranuthmanihaf1","Author":"Quran Uthmani Hafs No Diacritics","Language":"Arabic","Description":"Arabic","Direction":"rtl","Source":"https://qurancomplex.gov.sa/","Translations":[{"SurahNumber":84,"VerseNumber":1,"Text":"اذا السماء انشقت"},{"SurahNumber":84,"VerseNumber":2,"Text":"واذنت لربها وحقت"},{"SurahNumber":84,"VerseNumber":3,"Text":"واذا الارض مدت"},{"SurahNumber":84,"VerseNumber":4,"Text":"والقت ما فيها وتخلت"},{"SurahNumber":84,"VerseNumber":5,"Text":"واذنت لربها وحقت"},{"SurahNumber":84,"VerseNumber":6,"Text":"يايها الانسن انك كادح الى ربك كدح ا فملقيه"},{"SurahNumber":84,"VerseNumber":7,"Text":"فاما من اوتي كتبه بيمينه"},{"SurahNumber":84,"VerseNumber":8,"Text":"فسوف يحاسب حساب ا يسير ا"},{"SurahNumber":84,"VerseNumber":9,"Text":"وينقلب الى اهله مسرور ا"},{"SurahNumber":84,"VerseNumber":10,"Text":"واما من اوتي كتبه وراء ظهره"},{"SurahNumber":84,"VerseNumber":11,"Text":"فسوف يدعوا ثبور ا"},{"SurahNumber":84,"VerseNumber":12,"Text":"ويصلى سعيرا"},{"SurahNumber":84,"VerseNumber":13,"Text":"انه كان في اهله مسرورا"},{"SurahNumber":84,"VerseNumber":14,"Text":"انه ظن ان لن يحور"},{"SurahNumber":84,"VerseNumber":15,"Text":"بلى ان ربه كان به بصير ا"},{"SurahNumber":84,"VerseNumber":16,"Text":"فلا اقسم بالشفق"},{"SurahNumber":84,"VerseNumber":17,"Text":"واليل وما وسق"},{"SurahNumber":84,"VerseNumber":18,"Text":"والقمر اذا اتسق"},{"SurahNumber":84,"VerseNumber":19,"Text":"لتركبن طبقا عن طبق"},{"SurahNumber":84,"VerseNumber":20,"Text":"فما لهم لا يومنون"},{"SurahNumber":84,"VerseNumber":21,"Text":"واذا قري عليهم القرءان لا يسجدون۩"},{"SurahNumber":84,"VerseNumber":22,"Text":"بل الذين كفروا يكذبون"},{"SurahNumber":84,"VerseNumber":23,"Text":"والله اعلم بما يوعون"},{"SurahNumber":84,"VerseNumber":24,"Text":"فبشرهم بعذاب اليم"},{"SurahNumber":84,"VerseNumber":25,"Text":"الا الذين ءامنوا وعملوا الصلحت لهم اجر غير ممنون"}]}