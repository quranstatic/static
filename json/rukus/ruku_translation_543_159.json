{"Id":159,"LanguageCodes":["fa","fas"],"Name":"fas-mohammadsadeqit","Author":"Mohammad Sadeqi Tehrani","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":101,"VerseNumber":1,"Text":"کوبنده"},{"SurahNumber":101,"VerseNumber":2,"Text":"چیست کوبنده‌؟"},{"SurahNumber":101,"VerseNumber":3,"Text":"و چه فهمانیدت (که) کوبنده چیست‌؟"},{"SurahNumber":101,"VerseNumber":4,"Text":"روزی که مردم همچون پروانه پراکنده‌اند،"},{"SurahNumber":101,"VerseNumber":5,"Text":"و کوه‌ها مانند پشمِ زده‌شده‌اند"},{"SurahNumber":101,"VerseNumber":6,"Text":"پس اما هر کس میزان‌هایش سنگین بود،"},{"SurahNumber":101,"VerseNumber":7,"Text":"هم(او) در زندگی‌ای خوشایند است"},{"SurahNumber":101,"VerseNumber":8,"Text":"و اما هر که میزان‌هایش سبک بود،"},{"SurahNumber":101,"VerseNumber":9,"Text":"محور و مقصدش پرتگاهی آتشین است"},{"SurahNumber":101,"VerseNumber":10,"Text":"و چه فهمانیدت (آن) پرتگاه چیست‌؟"},{"SurahNumber":101,"VerseNumber":11,"Text":"آتشی است سوزنده و گدازنده"}]}