{"Id":196,"LanguageCodes":["hr","hrv"],"Name":"hrv-unknown","Author":"Unknown","Language":"Croatian","Description":"Croatian","Direction":"ltr","Source":"http://donatequran.com/","Translations":[{"SurahNumber":77,"VerseNumber":1,"Text":"Tako mi izaslanika uzastopnih"},{"SurahNumber":77,"VerseNumber":2,"Text":"Te onih koji bjesne uraganski"},{"SurahNumber":77,"VerseNumber":3,"Text":"I onih koji rasprostiru prostiranjem"},{"SurahNumber":77,"VerseNumber":4,"Text":"Te onih koji razdvajaju razdvajanjem"},{"SurahNumber":77,"VerseNumber":5,"Text":"Te onih koji dostavljaju Opomenu"},{"SurahNumber":77,"VerseNumber":6,"Text":"Opravdanje ili upozorenje"},{"SurahNumber":77,"VerseNumber":7,"Text":"Uistinu, ono čime vam se prijeti dogodiće se"},{"SurahNumber":77,"VerseNumber":8,"Text":"Pa kad se zvijezde pogase"},{"SurahNumber":77,"VerseNumber":9,"Text":"I kad se nebo rastvori"},{"SurahNumber":77,"VerseNumber":10,"Text":"I kad se brda zdrobe (u prašinu)"},{"SurahNumber":77,"VerseNumber":11,"Text":"I kad se poslanicima vrijeme odredi"},{"SurahNumber":77,"VerseNumber":12,"Text":"Za koji dan je odgođeno"},{"SurahNumber":77,"VerseNumber":13,"Text":"Za Dan razdvajanja"},{"SurahNumber":77,"VerseNumber":14,"Text":"A šta znaš ti šta je Dan razdvajanja"},{"SurahNumber":77,"VerseNumber":15,"Text":"Teško Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":16,"Text":"Zar nismo uništili ranije"},{"SurahNumber":77,"VerseNumber":17,"Text":"Zatim dali da ih slijede kasniji"},{"SurahNumber":77,"VerseNumber":18,"Text":"Tako postupamo sa zločincima"},{"SurahNumber":77,"VerseNumber":19,"Text":"Teško Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":20,"Text":"Zar vas ne stvaramo od tekućine prezrene"},{"SurahNumber":77,"VerseNumber":21,"Text":"Pa je stavljamo u boravište postojano"},{"SurahNumber":77,"VerseNumber":22,"Text":"Do roka poznatog"},{"SurahNumber":77,"VerseNumber":23,"Text":"Pa odmjeravamo, ta divni su Određivači"},{"SurahNumber":77,"VerseNumber":24,"Text":"Teško Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":25,"Text":"Zar nismo učinili Zemlju sabiralištem"},{"SurahNumber":77,"VerseNumber":26,"Text":"Živih i mrtvih"},{"SurahNumber":77,"VerseNumber":27,"Text":"I načinili na njoj gore stabilne, visoke, i napojili vas vodom slatkom"},{"SurahNumber":77,"VerseNumber":28,"Text":"Teško Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":29,"Text":"Idite onom šta ste poricali"},{"SurahNumber":77,"VerseNumber":30,"Text":"Idite prema sjeni sa tri grane"},{"SurahNumber":77,"VerseNumber":31,"Text":"Bez hlada će biti, a neće koristiti protiv plamena"},{"SurahNumber":77,"VerseNumber":32,"Text":"Uistinu! Izbacivaće ona iskre kao dvorac"},{"SurahNumber":77,"VerseNumber":33,"Text":"Kao da su one kamile žute"},{"SurahNumber":77,"VerseNumber":34,"Text":"Teško Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":35,"Text":"Ovo je Dan kad neće govoriti"},{"SurahNumber":77,"VerseNumber":36,"Text":"Niti će im se dopustiti, pa da se opravdavaju"},{"SurahNumber":77,"VerseNumber":37,"Text":"Teško Tog dana poricateljima"},{"SurahNumber":77,"VerseNumber":38,"Text":"Ovo je Dan odluke! Sabrali smo vas i prve"},{"SurahNumber":77,"VerseNumber":39,"Text":"Pa ako vi imate varku - ta prevarite Me"},{"SurahNumber":77,"VerseNumber":40,"Text":"Teško Tog dana poricateljima"}]}