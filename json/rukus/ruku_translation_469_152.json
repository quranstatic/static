{"Id":152,"LanguageCodes":["fa","fas"],"Name":"fas-bahaoddinkhorra","Author":"Baha Oddin Khorramshahi","Language":"Persian","Description":"Persian","Direction":"rtl","Source":"http://tanzil.net","Translations":[{"SurahNumber":56,"VerseNumber":1,"Text":"چون واقعه بزرگ [قیامت‌] واقع شود"},{"SurahNumber":56,"VerseNumber":2,"Text":"در وقوع آن دروغی نیست‌"},{"SurahNumber":56,"VerseNumber":3,"Text":"هم فرو دارنده‌[ی کافران‌] است و هم فرادارنده‌[ی مؤمنان‌]"},{"SurahNumber":56,"VerseNumber":4,"Text":"آنگاه که زمین به جنبشی سخت جنبانده شود"},{"SurahNumber":56,"VerseNumber":5,"Text":"و کوهها سخت خرد و ریز شود"},{"SurahNumber":56,"VerseNumber":6,"Text":"و همچون غباری پراکنده گردد"},{"SurahNumber":56,"VerseNumber":7,"Text":"و شما گروههای سه‌گانه‌ای باشید"},{"SurahNumber":56,"VerseNumber":8,"Text":"[یکی‌] اصحاب یمین، و چه حال دارند اصحاب یمین‌"},{"SurahNumber":56,"VerseNumber":9,"Text":"و [دیگری‌] اصحاب شمال، و چه حال دارند اصحاب شمال‌"},{"SurahNumber":56,"VerseNumber":10,"Text":"و [سومین‌] سابقان که پیشتازانند"},{"SurahNumber":56,"VerseNumber":11,"Text":"اینانند که مقرب‌اند"},{"SurahNumber":56,"VerseNumber":12,"Text":"در بهشتهای پرناز و نعمت‌"},{"SurahNumber":56,"VerseNumber":13,"Text":"گروهی بسیار از پیشینیان‌"},{"SurahNumber":56,"VerseNumber":14,"Text":"و اندکی از واپسینان‌"},{"SurahNumber":56,"VerseNumber":15,"Text":"بر تختهای گوهرنشان‌"},{"SurahNumber":56,"VerseNumber":16,"Text":"رودرروی هم بر آنها تکیه زده‌اند"},{"SurahNumber":56,"VerseNumber":17,"Text":"جاودانه جوانان بر گرد آنان می‌گردند"},{"SurahNumber":56,"VerseNumber":18,"Text":"همراه با کوزه‌ها و ابریقها و جامهایی از شراب جاری‌"},{"SurahNumber":56,"VerseNumber":19,"Text":"که [بهشتیان‌] از آن سردرد نگیرند و بد مست نشوند"},{"SurahNumber":56,"VerseNumber":20,"Text":"و میوه‌هایی از آنچه بر می‌گزینند"},{"SurahNumber":56,"VerseNumber":21,"Text":"و گوشت مرغ از آنچه خوش دارند"},{"SurahNumber":56,"VerseNumber":22,"Text":"و حوریان چشم درشت‌"},{"SurahNumber":56,"VerseNumber":23,"Text":"که همانندان مروارید نهفته‌اند"},{"SurahNumber":56,"VerseNumber":24,"Text":"این پاداش کاری است که کرده‌اند"},{"SurahNumber":56,"VerseNumber":25,"Text":"در آنجا [سخنان‌] بیهوده و [گزاف‌] گناه‌آلود نشنوند"},{"SurahNumber":56,"VerseNumber":26,"Text":"نشنوند مگر سخنی که سلام است و سلام‌"},{"SurahNumber":56,"VerseNumber":27,"Text":"و اصحاب یمین چه حال دارند اصحاب یمین‌"},{"SurahNumber":56,"VerseNumber":28,"Text":"در جوار درختان سدر بی‌خار"},{"SurahNumber":56,"VerseNumber":29,"Text":"و موزهای توبرتو"},{"SurahNumber":56,"VerseNumber":30,"Text":"و سایه گسترده‌"},{"SurahNumber":56,"VerseNumber":31,"Text":"و آبی ریزان‌"},{"SurahNumber":56,"VerseNumber":32,"Text":"و میوه بسیار"},{"SurahNumber":56,"VerseNumber":33,"Text":"که نه پایان‌پذیر است و نه بازداشته‌"},{"SurahNumber":56,"VerseNumber":34,"Text":"و دوشیزگان گرامی‌"},{"SurahNumber":56,"VerseNumber":35,"Text":"ما ایشان را به ابداع آفریده‌ایم‌"},{"SurahNumber":56,"VerseNumber":36,"Text":"و دوشیزه‌شان داشته‌ایم‌"},{"SurahNumber":56,"VerseNumber":37,"Text":"همسر دوست و هم سن و سال‌"},{"SurahNumber":56,"VerseNumber":38,"Text":"خاص اصحاب یمین‌"}]}